<Window x:Class="OrMan.Views.Admin.ThemSuaMonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Thông Tin Món Ăn" 
        Height="700" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="InputBackground" Color="#20FFFFFF"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#A0AEC0"/>

            <LinearGradientBrush x:Key="NeonButtonGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#8B5CF6" Offset="0"/>
                <GradientStop Color="#6D28D9" Offset="1"/>
            </LinearGradientBrush>

            <Style x:Key="InputLabel" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="5,0,0,6"/>
            </Style>

            <Style x:Key="ModernInputStyle" TargetType="{x:Type TextBox}">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="{StaticResource InputBackground}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="12" BorderThickness="{TemplateBinding BorderThickness}" 
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#8B5CF6"/>
                                    <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="{x:Type GridViewColumnHeader}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                            <Border Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="{StaticResource GlassBorder}" Padding="10,12">
                                <TextBlock Text="{TemplateBinding Content}" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" HorizontalAlignment="Left"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.ColumnSpan="2" Background="Transparent"/>
                    <Path Grid.Column="1" Data="M0,0 L5,5 L10,0" Stroke="White" StrokeThickness="1.5" 
                          HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,5,0"/>
                </Grid>
            </ControlTemplate>

            <Style x:Key="ModernComboBox" TargetType="{x:Type ComboBox}">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Background" Value="{StaticResource InputBackground}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ComboBox}">
                            <Grid>
                                <Border x:Name="templateBorder" Background="{TemplateBinding Background}" 
                                        CornerRadius="12" BorderThickness="1" BorderBrush="Transparent">
                                    <Grid>
                                        <ToggleButton Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}" 
                                                      Focusable="false" ClickMode="Press" 
                                                      IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"/>
                                        <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  
                                                          Content="{TemplateBinding SelectionBoxItem}" 
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                                          Margin="15,0,40,0" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </Grid>
                                </Border>
                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                       AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" Background="#232545" BorderThickness="1" 
                                                BorderBrush="#8B5CF6" CornerRadius="10" Margin="0,5,0,0">
                                            <ScrollViewer Margin="0,5" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                            </ScrollViewer>
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                                            </Border.Effect>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsDropDownOpen" Value="True">
                                    <Setter TargetName="templateBorder" Property="BorderBrush" Value="#8B5CF6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="25" Background="{StaticResource MainBackgroundGradient}" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="60" ShadowDepth="0" Color="#000000" Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="25,0">
                    <TextBlock x:Name="txtTitle" Text="CHI TIẾT MÓN ĂN" VerticalAlignment="Center" 
                               FontSize="16" FontWeight="Bold" Foreground="White" Opacity="0.9"/>

                    <Button Click="btnCancel_Click" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="36" Height="36" Cursor="Hand" Background="Transparent" BorderThickness="0">
                        <Grid>
                            <Ellipse Fill="#20FFFFFF" />
                            <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="White" StrokeThickness="2" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <ContentPresenter/>
                                    <Border x:Name="bdr" Background="Transparent" CornerRadius="18"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#30FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" Margin="0,10,0,15" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Width="170" Height="170" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#8B5CF6" Offset="0.2"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <BlurEffect Radius="50"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <Border Width="160" Height="160" CornerRadius="80" 
                            HorizontalAlignment="Center" VerticalAlignment="Center" ClipToBounds="True">
                        <Grid>
                            <Path Data="M19,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,5V19H5V5H19M13.96,12.29L11.21,15.83L9.25,13.47L6.5,17H17.5L13.96,12.29Z" 
                                  Fill="#30FFFFFF" Stretch="Uniform" Width="50" Height="50"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Image Source="{Binding Text, ElementName=txtHinhAnh}" 
                                   Stretch="UniformToFill" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,0,30,0">
                <StackPanel>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mã món" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtMaMon" Style="{StaticResource ModernInputStyle}" 
                                     Foreground="#A0AEC0" FontWeight="Bold"
                                     TextChanged="txtMaMon_TextChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Phân loại" Style="{StaticResource InputLabel}"/>
                            <ComboBox x:Name="cboLoaiMon" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="🔥 Mì Cay &amp; Lẩu" Tag="Mì Cay" IsSelected="True"/>
                                <ComboBoxItem Content="🥟 Đồ Chiên &amp; Topping" Tag="Đồ Chiên"/>
                                <ComboBoxItem Content="🥤 Nước Uống" Tag="Nước Uống"/>
                                <ComboBoxItem Content="🍚 Cơm Trộn" Tag="Cơm"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Tên món ăn" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtTenMon" Style="{StaticResource ModernInputStyle}" 
                                 FontSize="16" FontWeight="Bold"
                                 d:Text="Miến Bulgogi Bò Mỹ"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Giá bán (VNĐ)" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtGiaBan" Style="{StaticResource ModernInputStyle}" 
                                     Foreground="#F59E0B" FontWeight="Bold" FontSize="16"
                                     d:Text="57000"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Đơn vị tính" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtDonVi" Style="{StaticResource ModernInputStyle}" 
                                     d:Text="Tô"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Link Hình ảnh (URL/File)" Style="{StaticResource InputLabel}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtHinhAnh" Grid.Column="0" Style="{StaticResource ModernInputStyle}" 
                                     FontSize="13" Foreground="#90A4AE" FontStyle="Italic"/>

                            <Button Grid.Column="2" Click="btnBrowse_Click" ToolTip="Chọn ảnh" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bdr" Background="{StaticResource InputBackground}" CornerRadius="12" 
                                                BorderThickness="1" BorderBrush="Transparent">
                                            <TextBlock Text="..." FontSize="20" FontWeight="Bold" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-8,0,0"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr" Property="BorderBrush" Value="#8B5CF6"/>
                                                <Setter TargetName="bdr" Property="Background" Value="#30FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <Border Height="1" Background="{StaticResource GlassBorder}" Margin="0,15,0,15"/>

                    <TextBlock Text="ĐỊNH LƯỢNG (Công thức)" FontSize="14" FontWeight="Bold" Foreground="#F59E0B" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Nguyên liệu" Style="{StaticResource InputLabel}"/>
                            <ComboBox x:Name="cboNguyenLieu" Style="{StaticResource ModernComboBox}" 
                                      DisplayMemberPath="TenNguyenLieu" SelectedValuePath="Id"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Số lượng" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtSoLuongNL" Style="{StaticResource ModernInputStyle}" Text="1"/>
                        </StackPanel>

                        <Button Grid.Column="4" Content="Thêm" Click="BtnAddIngredient_Click"
                                Style="{StaticResource GlassButtonStyle}" Background="#203B82F6" 
                                Height="48" Width="60" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
                    </Grid>

                    <Border Background="#10FFFFFF" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource GlassBorder}" Height="180" Margin="0,0,0,5">
                        <ListView x:Name="lvCongThuc" 
              Background="Transparent" 
              BorderThickness="0" 
              Foreground="White" 
              ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListView.Resources>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#A0AEC0"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="0,10"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="GridViewColumnHeader">
                                                <Border Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="#20FFFFFF">
                                                    <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>

                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tên NL" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TenNguyenLieu}" 
                                       VerticalAlignment="Center" 
                                       TextTrimming="CharacterEllipsis" 
                                       Padding="5,0,0,0"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.HeaderContainerStyle>
                                            <Style TargetType="GridViewColumnHeader" BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                <Setter Property="Padding" Value="10,10"/>
                                            </Style>
                                        </GridViewColumn.HeaderContainerStyle>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Định lượng" Width="90">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SoLuongCan}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource WarningYellow}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="ĐVT" Width="60">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DonViTinh}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       Foreground="#E2E8F0"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="Xóa" Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="BtnRemoveIngredient_Click" 
                                    Cursor="Hand" Background="Transparent" BorderThickness="0" 
                                    Width="30" Height="30"
                                    HorizontalAlignment="Center">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="Button">
                                                                        <Border x:Name="btnBorder" Background="Transparent" CornerRadius="5">
                                                                            <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                              Fill="#EF4444" Stretch="Uniform" Width="14" Height="14" 
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter TargetName="btnBorder" Property="Background" Value="#20EF4444"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>

                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="40"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border x:Name="bd" Background="Transparent" CornerRadius="8" Margin="0,2">
                                                    <GridViewRowPresenter VerticalAlignment="Center" Margin="0"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#15FFFFFF"/>
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#258B5CF6"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </Border>
                    <TextBlock Text="*Click chuột phải vào dòng để xóa" Foreground="#70A0AEC0" FontSize="11" FontStyle="Italic" Margin="5,2,0,0"/>

                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2" Padding="30,15,30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Hủy bỏ" Click="btnCancel_Click" 
                            Foreground="#EF4444" Background="Transparent" FontWeight="Bold" Cursor="Hand"
                            FontSize="15" HorizontalAlignment="Stretch" Height="50">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" Background="Transparent" CornerRadius="15" BorderThickness="1" BorderBrush="#30EF4444">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#15EF4444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Click="btnSave_Click" Height="50" Cursor="Hand" HorizontalAlignment="Stretch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" CornerRadius="15" Background="{StaticResource NeonButtonGradient}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#8B5CF6" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                    </Border.Effect>
                                    <TextBlock Text="LƯU LẠI" FontSize="16" FontWeight="Bold" Foreground="White" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                                        <Setter TargetName="bdr" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#8B5CF6" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>