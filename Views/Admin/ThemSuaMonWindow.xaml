<Window x:Class="OrMan.Views.Admin.ThemSuaMonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Thông Tin Món Ăn" 
        Height="700" Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <!-- 1. MÀU SẮC CHỦ ĐẠO -->
            <SolidColorBrush x:Key="PrimaryBlue" Color="#3B82F6"/>
            <SolidColorBrush x:Key="InputBackground" Color="#151E293B"/>
            <SolidColorBrush x:Key="InputBorder" Color="#334155"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>

            <!-- Gradient cho nút Lưu -->
            <LinearGradientBrush x:Key="BlueActionGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3B82F6" Offset="0"/>
                <GradientStop Color="#2563EB" Offset="1"/>
            </LinearGradientBrush>

            <!-- Label Style -->
            <Style x:Key="InputLabel" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="5,0,0,6"/>
            </Style>

            <!-- 2. STYLE TEXTBOX -->
            <Style x:Key="ModernInputStyle" TargetType="{x:Type TextBox}">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Padding" Value="15,0"/>
                <Setter Property="CaretBrush" Value="White"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Background" Value="{StaticResource InputBackground}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{StaticResource InputBorder}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="10" BorderThickness="{TemplateBinding BorderThickness}" 
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <Grid>
                                    <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                    <Setter TargetName="border" Property="Background" Value="#203B82F6"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush" Value="#64748B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 3. STYLE COMBOBOX ITEM -->
            <Style TargetType="ComboBoxItem">
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBoxItem">
                            <Border x:Name="bd" Background="Transparent" CornerRadius="6" Margin="4,2" Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#3B82F6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#203B82F6"/>
                                    <Setter Property="Foreground" Value="#3B82F6"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 4. STYLE COMBOBOX (CÓ HIỆU ỨNG XOAY MŨI TÊN) -->
            <Style x:Key="ModernComboBox" TargetType="{x:Type ComboBox}">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Background" Value="{StaticResource InputBackground}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ComboBox}">
                            <Grid>
                                <ToggleButton Name="ToggleButton" ClickMode="Press" Focusable="false"
                                              IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="border" Background="{StaticResource InputBackground}" 
                                                    CornerRadius="10" BorderThickness="1" BorderBrush="{StaticResource InputBorder}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="40" />
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Icon mũi tên với tên 'Arrow' để xoay -->
                                                    <Path x:Name="Arrow" Grid.Column="1" 
                                                          Data="M7,10L12,15L17,10H7Z" 
                                                          Fill="#94A3B8" 
                                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                                          Stretch="Uniform" Width="12" Height="8"
                                                          RenderTransformOrigin="0.5,0.5">
                                                        <Path.RenderTransform>
                                                            <RotateTransform Angle="0"/>
                                                        </Path.RenderTransform>
                                                    </Path>
                                                </Grid>
                                            </Border>

                                            <!-- Triggers hiệu ứng -->
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="#64748B"/>
                                                    <Setter TargetName="Arrow" Property="Fill" Value="White"/>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                                    <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource PrimaryBlue}"/>

                                                    <!-- Xoay 180 độ khi mở -->
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                 To="180" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <!-- Xoay về 0 độ khi đóng -->
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="Arrow"
                                                                                 Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                 To="0" Duration="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  
                                                  Content="{TemplateBinding SelectionBoxItem}" 
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                                  Margin="15,0,40,0" VerticalAlignment="Center" HorizontalAlignment="Left" />

                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                       AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" Background="#1E293B" BorderThickness="1" 
                                                BorderBrush="#334155" CornerRadius="10" Margin="0,5,0,0">
                                            <Border.Effect>
                                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                                            </Border.Effect>
                                            <ScrollViewer Margin="0,5" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- 5. LISTVIEW ITEM STYLE -->
            <Style TargetType="ListViewItem">
                <Setter Property="Height" Value="40"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border x:Name="bd" Background="Transparent" CornerRadius="8" Margin="0,2">
                                <GridViewRowPresenter VerticalAlignment="Center" Margin="0"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#15FFFFFF"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#203B82F6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!-- UI CHÍNH -->
    <Border CornerRadius="20" Background="{DynamicResource MainBackgroundGradient}" ClipToBounds="True" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="60" ShadowDepth="0" Color="#000000" Opacity="0.8"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header + Ảnh -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="25,0">
                    <TextBlock x:Name="txtTitle" Text="CHI TIẾT MÓN ĂN" VerticalAlignment="Center" 
                               FontSize="18" FontWeight="Bold" Foreground="White"/>

                    <Button Click="btnCancel_Click" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Width="36" Height="36" Cursor="Hand" Background="Transparent" BorderThickness="0">
                        <Grid>
                            <Ellipse Fill="#10FFFFFF" />
                            <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="White" StrokeThickness="2" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <ContentPresenter/>
                                    <Border x:Name="bdr" Background="Transparent" CornerRadius="18"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#20FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <Grid Grid.Row="1" Margin="0,10,0,15" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Width="170" Height="170" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.4">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#3B82F6" Offset="0.2"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.Effect>
                            <BlurEffect Radius="40"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <Border Width="160" Height="160" CornerRadius="80" 
                            BorderBrush="#303B82F6" BorderThickness="2"
                            HorizontalAlignment="Center" VerticalAlignment="Center" ClipToBounds="True" Background="#151E293B">
                        <Grid>
                            <Path Data="M19,3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,5V19H5V5H19M13.96,12.29L11.21,15.83L9.25,13.47L6.5,17H17.5L13.96,12.29Z" 
                                  Fill="#30FFFFFF" Stretch="Uniform" Width="50" Height="50"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>

                            <Image Source="{Binding Text, ElementName=txtHinhAnh}" 
                                   Stretch="UniformToFill" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Form Nhập Liệu -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,0,30,0">
                <StackPanel>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mã món" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtMaMon" Style="{StaticResource ModernInputStyle}" 
                                     Foreground="#94A3B8" FontWeight="Bold" TextChanged="txtMaMon_TextChanged"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Phân loại" Style="{StaticResource InputLabel}"/>
                            <ComboBox x:Name="cboLoaiMon" Style="{StaticResource ModernComboBox}">
                                <ComboBoxItem Content="🔥 Mì Cay &amp; Topping" Tag="Mì Cay" IsSelected="True"/>
                                <ComboBoxItem Content="🥟 Món khác" Tag="Đồ Chiên"/>
                                <ComboBoxItem Content="🥤 Nước Uống" Tag="Nước Uống"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Tên món ăn" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtTenMon" Style="{StaticResource ModernInputStyle}" 
                                 FontSize="16" FontWeight="Bold"/>
                    </StackPanel>

                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Giá bán (VNĐ)" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtGiaBan" Style="{StaticResource ModernInputStyle}" 
                                     Foreground="#F59E0B" FontWeight="Bold" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Đơn vị tính" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtDonVi" Style="{StaticResource ModernInputStyle}"/>
                        </StackPanel>
                    </Grid>

                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Link Hình ảnh (URL/File)" Style="{StaticResource InputLabel}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtHinhAnh" Grid.Column="0" Style="{StaticResource ModernInputStyle}" 
                                     FontSize="13" Foreground="#90A4AE" FontStyle="Italic"/>

                            <Button Grid.Column="2" Click="btnBrowse_Click" ToolTip="Chọn ảnh" Cursor="Hand"
                                    Background="{StaticResource InputBackground}" BorderThickness="1" BorderBrush="{StaticResource InputBorder}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="10" 
                                                BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                                            <TextBlock Text="..." FontSize="20" FontWeight="Bold" Foreground="White" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-8,0,0"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr" Property="BorderBrush" Value="{StaticResource PrimaryBlue}"/>
                                                <Setter TargetName="bdr" Property="Background" Value="#203B82F6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <Border Height="1" Background="{StaticResource GlassBorder}" Margin="0,15,0,15"/>

                    <TextBlock Text="ĐỊNH LƯỢNG (Công thức)" FontSize="14" FontWeight="Bold" Foreground="#3B82F6" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Nguyên liệu" Style="{StaticResource InputLabel}"/>
                            <ComboBox x:Name="cboNguyenLieu" Style="{StaticResource ModernComboBox}" 
                                      DisplayMemberPath="TenNguyenLieu" SelectedValuePath="Id"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Số lượng" Style="{StaticResource InputLabel}"/>
                            <TextBox x:Name="txtSoLuongNL" Style="{StaticResource ModernInputStyle}" Text="1" HorizontalContentAlignment="Center"/>
                        </StackPanel>

                        <Button Grid.Column="4" Click="BtnAddIngredient_Click"
                                Width="48" Height="48" VerticalAlignment="Bottom" Cursor="Hand" ToolTip="Thêm vào công thức">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bdr" Background="#153B82F6" BorderBrush="#3B82F6" BorderThickness="1" CornerRadius="10">
                                        <Path x:Name="icon" 
                                              Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                                              Fill="#3B82F6" 
                                              Stretch="Uniform" Width="14" Height="14"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bdr" Property="Background" Value="#3B82F6"/>
                                            <Setter TargetName="icon" Property="Fill" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <Border Background="#10FFFFFF" CornerRadius="10" BorderThickness="1" BorderBrush="{StaticResource GlassBorder}" Height="150" Margin="0,0,0,5">
                        <ListView x:Name="lvCongThuc" Background="Transparent" BorderThickness="0" Foreground="White" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.Resources>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                                                <Border Background="Transparent" BorderThickness="0,0,0,1" BorderBrush="#20FFFFFF" Padding="0,10">
                                                    <TextBlock Text="{TemplateBinding Content}" Foreground="{StaticResource TextSecondary}" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Tên NL" Width="140">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TenNguyenLieu}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" Padding="10,0,0,0"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                        <GridViewColumn.HeaderContainerStyle>
                                            <Style TargetType="GridViewColumnHeader" BasedOn="{StaticResource {x:Type GridViewColumnHeader}}">
                                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                                <Setter Property="Padding" Value="10,10"/>
                                            </Style>
                                        </GridViewColumn.HeaderContainerStyle>
                                    </GridViewColumn>
                                    <GridViewColumn Header="SL" Width="90">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SoLuongCan}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#F59E0B"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="ĐVT" Width="60">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DonViTinh}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#94A3B8"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="" Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="BtnRemoveIngredient_Click" Cursor="Hand" Background="Transparent" BorderThickness="0" Width="30" Height="30">
                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border x:Name="b" Background="Transparent" CornerRadius="5">
                                                                <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" Fill="#EF4444" Stretch="Uniform" Width="14" Height="14"/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="b" Property="Background" Value="#20EF4444"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                    <TextBlock Text="*Bấm thùng rác để xóa nguyên liệu" Foreground="#5094A3B8" FontSize="11" FontStyle="Italic" Margin="5,0,0,0"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2" Padding="30,15,30,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Hủy bỏ" Click="btnCancel_Click" 
                            Foreground="#EF4444" Background="Transparent" FontWeight="SemiBold" Cursor="Hand"
                            FontSize="15" HorizontalAlignment="Stretch" Height="50">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" Background="Transparent" CornerRadius="12" BorderThickness="1" BorderBrush="#30EF4444">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Background" Value="#15EF4444"/>
                                        <Setter TargetName="bdr" Property="BorderBrush" Value="#EF4444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Grid.Column="2" Click="btnSave_Click" Height="50" Cursor="Hand" HorizontalAlignment="Stretch">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="bdr" CornerRadius="12" Background="{StaticResource BlueActionGradient}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#3B82F6" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z" 
                                              Fill="White" 
                                              Stretch="Uniform" Width="18" Height="18"
                                              VerticalAlignment="Center"
                                              Margin="0,2,10,0"/>
                                        <TextBlock Text="LƯU MÓN" FontSize="15" FontWeight="Bold" Foreground="White" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bdr" Property="Opacity" Value="0.9"/>
                                        <Setter TargetName="bdr" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#3B82F6" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>