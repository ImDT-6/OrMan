<UserControl x:Class="OrMan.Views.Admin.ThucDonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
             xmlns:vm="clr-namespace:OrMan.ViewModels.Admin" 
             
             d:DataContext="{d:DesignInstance Type=vm:ThucDonViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <DataTemplate x:Key="FoodCardTemplate">
                <Border Width="220" Height="330" Margin="10" 
                        Background="#25FFFFFF" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="140"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" CornerRadius="15,15,0,0" ClipToBounds="True">
                            <Grid>
                                <Image Source="{Binding HinhAnhUrl}" Stretch="UniformToFill"/>
                                <Border Background="#AA000000" Visibility="{Binding IsSoldOut, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <TextBlock Text="HẾT HÀNG" Foreground="Red" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                                        <TextBlock.RenderTransform>
                                            <RotateTransform Angle="-30"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="1" Margin="15,10,15,0">
                            <TextBlock Text="{Binding TenMon}" Foreground="White" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding MaMon}" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,2,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding GiaBan, StringFormat=N0}" Foreground="{StaticResource WarningYellow}" FontWeight="Bold" FontSize="18"/>
                                <TextBlock Text="đ" Foreground="{StaticResource WarningYellow}" FontSize="14" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                            </StackPanel>
                        </StackPanel>

                        <CheckBox Grid.Row="2" Content="Báo Hết Hàng" 
                                  IsChecked="{Binding IsSoldOut}"
                                  Command="{Binding DataContext.ToggleSoldOutCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  CommandParameter="{Binding}"
                                  Foreground="White" Margin="15,5"/>

                        <Border Grid.Row="3" Background="#10000000" CornerRadius="0,0,15,15" Padding="10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Sửa" 
                                        Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource GlassButtonStyle}" Width="90" Height="35" FontSize="12" Margin="0,0,5,0" Background="#203B82F6"/>
                                <Button Content="Xóa" 
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource GlassButtonStyle}" Width="90" Height="35" FontSize="12" Background="#20EF4444" Foreground="#EF4444"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </DataTemplate>

            <Style TargetType="TabItem">
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="15,10"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Grid>
                                <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="Transparent" BorderThickness="0,0,0,2" CornerRadius="10,10,0,0" Margin="0,0,5,0">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="{TemplateBinding Padding}" />
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentGradient}"/>
                                    <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,4"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ListBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <!-- [FIX] Đảm bảo ListBox tự hiện thanh cuộn dọc -->
                <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
                <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                <Setter Property="ItemContainerStyle">
                    <Setter.Value>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1.02" ScaleY="1.02" CenterX="110" CenterY="145"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{StaticResource MainBackgroundGradient}" Margin="20" CornerRadius="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="25,25,25,0">
                <TextBlock Text="QUẢN LÝ THỰC ĐƠN" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <Grid Margin="0,15,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" 
                             ToolTip="Tìm kiếm món ăn, nguyên liệu..." 
                             Text="{Binding TuKhoaTimKiem, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="TextBox_TextChanged"
                             Style="{StaticResource SearchTextBoxStyle}" 
                             Height="45" VerticalContentAlignment="Center" Margin="0,0,20,0"/>
                    <Button Grid.Column="1" Command="{Binding AddCommand}" Content="+ Thêm Món" Style="{StaticResource GlassButtonStyle}" Height="45" Padding="25,0" Background="{StaticResource SuccessGreen}" FontSize="15"/>
                </Grid>
            </StackPanel>

            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="25,0,25,25" x:Name="MenuTabControl" SelectionChanged="MenuTabControl_SelectionChanged">
                <TabItem Header="🍜 MÌ CAY &amp; LẨU" Tag="Mì Cay">
                    <!-- [FIX] Đã Xóa ScrollViewer bao ngoài, chuyển Margin vào ListBox -->
                    <ListBox x:Name="ListBoxMiCay" ItemTemplate="{StaticResource FoodCardTemplate}" Margin="0,20,0,0"/>
                </TabItem>
                <TabItem Header="🥟 ĐỒ CHIÊN &amp; TOPPING" Tag="Đồ Chiên">
                    <!-- [FIX] Đã Xóa ScrollViewer bao ngoài -->
                    <ListBox x:Name="ListBoxDoChien" ItemTemplate="{StaticResource FoodCardTemplate}" Margin="0,20,0,0"/>
                </TabItem>
                <TabItem Header="🥤 NƯỚC UỐNG" Tag="Nước Uống">
                    <!-- [FIX] Đã Xóa ScrollViewer bao ngoài -->
                    <ListBox x:Name="ListBoxNuocUong" ItemTemplate="{StaticResource FoodCardTemplate}" Margin="0,20,0,0"/>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</UserControl>