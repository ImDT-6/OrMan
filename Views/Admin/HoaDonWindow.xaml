<Window x:Class="OrMan.Views.Admin.HoaDonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="In Hóa Đơn" Height="700" Width="380"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#E5E5E5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Border x:Name="BillArea" Background="White" Margin="10,10,10,0" Padding="15,20,15,20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" Opacity="0.2" ShadowDepth="2"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="HÓA ĐƠN THANH TOÁN" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black"/>

                    <TextBlock x:Name="txtMaHD" Text="Số HĐ: 210637" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,2,0,15"/>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Mã HĐ: #TEMP" FontSize="11"/>
                            <TextBlock x:Name="txtBan" Text="Bàn: 01" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="Giờ vào: --:--" FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="TN: Thu ngân Admin" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock x:Name="txtNgay" Text="12/12/2025" FontSize="11" HorizontalAlignment="Right"/>
                            <TextBlock Text="Giờ ra: --:--" FontSize="11" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>

                    <Border BorderBrush="Black" BorderThickness="0,1,0,1" Margin="0,0,0,5" Padding="0,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="STT" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Text="Tên món" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Grid.Column="2" Text="SL" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Thành tiền" FontSize="11" FontWeight="Bold" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <ItemsControl x:Name="ListMonAn">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="70"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="#" FontSize="11"/>

                                    <TextBlock Grid.Column="1" Text="{Binding TenMonHienThi}" FontSize="11" TextWrapping="Wrap" Margin="0,0,5,0"/>
                                    <TextBlock Grid.Column="2" Text="{Binding SoLuong}" FontSize="11" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="{Binding ThanhTien, StringFormat='N0'}" FontSize="11" HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Rectangle Height="1" Stroke="Black" StrokeThickness="1" StrokeDashArray="4 2" SnapsToDevicePixels="True" Margin="0,10"/>

                    <Grid Margin="0,0,0,2">
                        <TextBlock Text="Thành tiền:" FontSize="12"/>
                        <TextBlock x:Name="txtTongTien" Text="57,000 đ" FontSize="12" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </Grid>

                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Tổng cộng:" FontSize="14" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Text, ElementName=txtTongTien}" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
                    </Grid>

                    <StackPanel x:Name="pnlQR" Margin="0,10,0,0" Visibility="Collapsed">
                        <Rectangle Height="1" Stroke="Black" StrokeThickness="1" StrokeDashArray="4 2" SnapsToDevicePixels="True" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <TextBlock Text="THANH TOÁN: " FontSize="11"/>
                            <TextBlock x:Name="txtHinhThuc" Text="CHUYỂN KHOẢN" FontSize="11" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="NGÂN HÀNG MB BANK" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,2">
                                <TextBlock Text="STK: " FontSize="12"/>
                                <TextBlock x:Name="txtSTK" Text="06618706666" FontSize="14" FontWeight="Bold"/>
                            </StackPanel>

                            <TextBlock x:Name="txtCTK" Text="TRAN DUC TRONG" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center"/>
                        </StackPanel>

                        <Image x:Name="imgQR" Width="160" Height="160" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,5,0,5"/>

                        <TextBlock Text="(Quét mã để thanh toán)" HorizontalAlignment="Center" FontSize="10" FontStyle="Italic" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </StackPanel>

                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="I LOVE UIT" FontWeight="Bold" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock Text="Địa chỉ: P5.02 Tòa B, UIT" HorizontalAlignment="Center" FontSize="11"/>
                        <TextBlock Text="HOTLINE: 1900 00 00 00" HorizontalAlignment="Center" FontSize="11" Margin="0,0,0,15"/>

                        <TextBlock Text="Powered by OrMan" HorizontalAlignment="Center" FontSize="10" Foreground="Gray"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <Border Grid.Row="1" Background="#F3F4F6" Padding="15" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Hủy bỏ" Click="BtnHuy_Click" Height="40" Margin="0,0,5,0" Background="White" BorderBrush="#DDD" BorderThickness="1" Foreground="Black"/>
                <Button Content="🖨 IN HÓA ĐƠN" Click="BtnIn_Click" Grid.Column="1" Height="40" Margin="5,0,0,0" Background="Black" Foreground="White" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</Window>