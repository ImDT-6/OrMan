<UserControl x:Class="OrMan.Views.Admin.DoanhThuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="SegmentRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#A0AEC0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Width" Value="90"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border Background="Transparent">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="{x:Type DataGrid}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="RowBackground" Value="#05FFFFFF"/>
                <Setter Property="AlternatingRowBackground" Value="#10FFFFFF"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource GlassBorder}"/>
                <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
                <Setter Property="HeadersVisibility" Value="Column"/>

                <Setter Property="ColumnHeaderStyle">
                    <Setter.Value>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            <Setter Property="Padding" Value="10,0,10,10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{StaticResource GlassBorder}"/>
                        </Style>
                    </Setter.Value>
                </Setter>

                <Setter Property="RowStyle">
                    <Setter.Value>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="Height" Value="50"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#203B82F6"/>
                                </Trigger>

                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#403B82F6"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Trigger>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsSelected" Value="True"/>
                                        <Condition Property="IsFocused" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <Setter Property="Background" Value="#403B82F6"/>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>

                <Setter Property="CellStyle">
                    <Setter.Value>
                        <Style TargetType="DataGridCell">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Grid Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" Margin="10,0"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource MainBackgroundGradient}" MouseDown="RootGrid_MouseDown">
        <Grid Margin="25,5,25,0" Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="BÁO CÁO DOANH THU" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Theo dõi hiệu quả kinh doanh theo thời gian thực" Foreground="{StaticResource TextSecondary}" FontSize="14" Margin="0,5,0,0"/>
            </StackPanel>

            <UniformGrid Grid.Row="1" Columns="3" Rows="1" Margin="0,0,0,30">
                <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Margin="0,0,15,0" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="TỔNG DOANH THU" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TongDoanhThuText}" Foreground="{StaticResource SuccessGreen}" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Width="50" Height="50" CornerRadius="25" Background="#2010B981" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Path Data="{StaticResource IconMoneyGeo}" Fill="{StaticResource SuccessGreen}" Width="24" Height="24" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>
                <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Margin="0,0,15,0" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="TỔNG ĐƠN HÀNG" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TongSoDon}" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Width="50" Height="50" CornerRadius="25" Background="#203B82F6" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Path Data="{StaticResource IconFoodGeo}" Fill="#3B82F6" Width="24" Height="24" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>
                <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="TRUNG BÌNH / ĐƠN" Foreground="{StaticResource TextSecondary}" FontSize="13" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding TrungBinhDon}" Foreground="{StaticResource WarningYellow}" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Width="50" Height="50" CornerRadius="25" Background="#20F59E0B" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <TextBlock Text="⚖️" Foreground="RosyBrown" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <Grid Grid.Row="2" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Height="40" Background="#15FFFFFF" CornerRadius="12" Padding="4">
                    <Grid>
                        <Border x:Name="ActiveIndicator"
                                HorizontalAlignment="Left"
                                Width="90" 
                                Background="{StaticResource AccentGradient}" 
                                CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect Color="#8B5CF6" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="IndicatorTransform" X="0"/>
                            </Border.RenderTransform>
                        </Border>

                        <StackPanel x:Name="TimeFilterPanel" Orientation="Horizontal">
                            <RadioButton Content="Hôm nay" 
                                         Tag="Hôm nay"
                                         GroupName="TimeFilter"
                                         IsChecked="True"
                                         Style="{StaticResource SegmentRadioButtonStyle}"
                                         Click="TimeFilter_Click"/>

                            <RadioButton Content="Tuần này" 
                                         Tag="Tuần này"
                                         GroupName="TimeFilter"
                                         Style="{StaticResource SegmentRadioButtonStyle}"
                                         Click="TimeFilter_Click"/>

                            <RadioButton Content="Tháng này" 
                                         Tag="Tháng này"
                                         GroupName="TimeFilter"
                                         Style="{StaticResource SegmentRadioButtonStyle}"
                                         Click="TimeFilter_Click"/>

                            <RadioButton Content="Tất cả" 
                                         Tag="Tất cả"
                                         GroupName="TimeFilter"
                                         Style="{StaticResource SegmentRadioButtonStyle}"
                                         Click="TimeFilter_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBox Grid.Column="1" 
                         Text="{Binding TuKhoaTimKiem, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource SearchTextBoxStyle}" 
                         ToolTip="Tìm mã hóa đơn hoặc nhân viên..." 
                         Width="300" 
                         HorizontalAlignment="Right" 
                         Margin="0,0,15,0"/>

                <Button Grid.Column="2" Content="Xuất Excel" Style="{StaticResource GlassButtonStyle}" Width="120" Height="40" FontSize="14" Background="#20FFFFFF" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1"/>
            </Grid>

            <Border Grid.Row="3" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="20">
                <DataGrid x:Name="RevenueDataGrid"
                          ItemsSource="{Binding DanhSachHoaDon}" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True">

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type ScrollBar}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Width" Value="8"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                                        <Grid x:Name="GridRoot" Width="8" Background="Transparent">
                                            <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                                <Border x:Name="ThumbBorder" Background="#20FFFFFF" CornerRadius="4"/>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="ThumbBorder" Property="Background" Value="#50FFFFFF"/>
                                                                    </Trigger>
                                                                    <Trigger Property="IsDragging" Value="True">
                                                                        <Setter TargetName="ThumbBorder" Property="Background" Value="#80FFFFFF"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Mã HĐ" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding MaHoaDon}" FontWeight="Bold" Foreground="{StaticResource AccentGradient}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Thời Gian" Binding="{Binding NgayTao, StringFormat='dd/MM/yyyy HH:mm'}" Width="*"/>
                        <DataGridTemplateColumn Header="Bàn" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#30FFFFFF" CornerRadius="5" Padding="10,2" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding SoBan, StringFormat='Bàn {0:00}'}" FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Nhân Viên" Binding="{Binding NguoiTao}" Width="*"/>
                        <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TongTien, StringFormat=N0}" Width="*" FontWeight="Bold" Foreground="{StaticResource SuccessGreen}"/>

                        <DataGridTemplateColumn Header="Hành Động" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Chi tiết" 
                                            Style="{StaticResource DataGridActionButtonStyle}" 
                                            FontSize="12" Height="30" Padding="10,0" 
                                            Background="#203B82F6" Foreground="#3B82F6" 
                                            Margin="0"
                                            HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>