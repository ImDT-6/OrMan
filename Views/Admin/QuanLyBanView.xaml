<UserControl x:Class="OrMan.Views.Admin.QuanLyBanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:OrMan.ViewModels.Admin"
             xmlns:helpers="clr-namespace:OrMan.Helpers" 
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <helpers:NullToBoolConverter x:Key="NullToBoolConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <helpers:SelectedConverter x:Key="SelectedConverter"/>

            <Storyboard x:Key="JiggleAnimation" RepeatBehavior="Forever" AutoReverse="True">
                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                 From="-2" To="2" Duration="0:0:0.15"/>
            </Storyboard>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MainBackgroundGradient}">
        <Grid Margin="25,5,25,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="SƠ ĐỒ BÀN ĂN" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>

                    <Button Grid.Column="1" Content="+ Thêm Bàn" 
                            Command="{Binding AddTableCommand}"
                            Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Background="#22C55E" Foreground="White"
                            HorizontalAlignment="Left" Margin="20,0,0,0" Padding="15,5"
                            Style="{StaticResource GlassDismissButtonStyle}" Height="35"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Chế độ sửa" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#94A3B8"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                            <Setter Property="Foreground" Value="#3B82F6"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ToggleButton IsChecked="{Binding IsEditMode}" 
                                      Width="44" Height="24" Cursor="Hand" Background="#334155">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="border" CornerRadius="12" Background="{TemplateBinding Background}" BorderThickness="1" BorderBrush="#475569">
                                        <Grid>
                                            <Ellipse x:Name="Dot" Width="18" Height="18" Fill="White" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#3B82F6"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                            <Setter TargetName="Dot" Property="HorizontalAlignment" Value="Right"/>
                                            <Setter TargetName="Dot" Property="Margin" Value="0,0,2,0"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </StackPanel>
                </Grid>

                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding DanhSachBan}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid x:Name="JiggleGrid" Margin="8" RenderTransformOrigin="0.5,0.5">
                                    <Grid.RenderTransform>
                                        <RotateTransform Angle="0"/>
                                    </Grid.RenderTransform>

                                    <Button Command="{Binding DataContext.SelectTableCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                    Width="130" Height="130"
                    Style="{StaticResource NavButtonStyle}" Padding="0">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid>
                                                    <Border x:Name="bdr_bg" CornerRadius="20" Background="#10FFFFFF"/>

                                                    <Rectangle x:Name="bdr_outline" RadiusX="20" RadiusY="20" 
                                       Stroke="#50FFFFFF" StrokeThickness="2" 
                                       Fill="Transparent" StrokeDashArray="1 0"/>

                                                    <Grid>
                                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                            <TextBlock Text="{Binding TenBan}" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="5,0"/>
                                                            <TextBlock x:Name="txtStatus" Text="{Binding TrangThai}" Foreground="#94A3B8" FontSize="14" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                                                        </StackPanel>

                                                        <Border x:Name="PaymentAlert" Background="#AAEF4444" CornerRadius="18" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10,5">
                                                            <StackPanel>
                                                                <TextBlock Text="THANH TOÁN" Foreground="White" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center"/>
                                                                <TextBlock Text="{Binding HinhThucThanhToan}" Foreground="Yellow" FontWeight="Bold" FontSize="11" TextAlignment="Center"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <Grid x:Name="LockIcon" Visibility="Collapsed" Background="#80000000" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                            <TextBlock Text="🔒" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#E2E8F0"/>
                                                        </Grid>
                                                    </Grid>
                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding TrangThai}" Value="Có Khách">
                                                        <Setter TargetName="bdr_bg" Property="Background" Value="#203B82F6"/>
                                                        <Setter TargetName="bdr_outline" Property="Stroke" Value="#3B82F6"/>
                                                        <Setter TargetName="txtStatus" Property="Foreground" Value="#3B82F6"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding YeuCauThanhToan}" Value="True">
                                                        <Setter TargetName="PaymentAlert" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="bdr_outline" Property="Stroke" Value="#EF4444"/>
                                                        <Setter TargetName="txtStatus" Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Value="True">
                                                                <Condition.Binding>
                                                                    <MultiBinding Converter="{StaticResource SelectedConverter}">
                                                                        <Binding Path="." />
                                                                        <Binding Path="DataContext.SelectedBan" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                                    </MultiBinding>
                                                                </Condition.Binding>
                                                            </Condition>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter TargetName="bdr_outline" Property="Stroke" Value="#F59E0B"/>
                                                        <Setter TargetName="bdr_outline" Property="StrokeThickness" Value="4"/>
                                                        <Setter TargetName="bdr_bg" Property="Background" Value="#30F59E0B"/>
                                                    </MultiDataTrigger>

                                                    <DataTrigger Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                                        <Setter TargetName="bdr_outline" Property="Stroke" Value="#64748B"/>
                                                        <Setter TargetName="bdr_outline" Property="StrokeThickness" Value="2"/>
                                                        <Setter TargetName="bdr_outline" Property="StrokeDashArray" Value="4 2"/>
                                                    </DataTrigger>

                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                            <Condition Binding="{Binding TrangThai}" Value="Có Khách"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter TargetName="LockIcon" Property="Visibility" Value="Visible"/>
                                                        <Setter TargetName="bdr_bg" Property="Opacity" Value="0.6"/>
                                                    </MultiDataTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button Command="{Binding DataContext.DeleteTableCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding}"
                    Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="-8,-8,-8,0"
                    Background="#EF4444" BorderThickness="0" Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderBrush="White" BorderThickness="2">
                                                                <TextBlock Text="✕" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                                            <Condition Binding="{Binding TrangThai}" Value="Trống"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </MultiDataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                </Grid>

                                <DataTemplate.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                                            <Condition Binding="{Binding TrangThai}" Value="Trống"/>
                                        </MultiDataTrigger.Conditions>
                                        <MultiDataTrigger.EnterActions>
                                            <BeginStoryboard x:Name="JiggleBegin">
                                                <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                                    <DoubleAnimation Storyboard.TargetName="JiggleGrid"
                                     Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                     From="-1" To="1" Duration="0:0:0.45"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </MultiDataTrigger.EnterActions>
                                        <MultiDataTrigger.ExitActions>
                                            <StopStoryboard BeginStoryboardName="JiggleBegin"/>
                                        </MultiDataTrigger.ExitActions>
                                    </MultiDataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Border Grid.Column="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="20">
                <Grid>

                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="CHI TIẾT ĐƠN HÀNG" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding SelectedBan.TenBan, TargetNullValue='Chưa chọn bàn'}" Foreground="{StaticResource TextSecondary}" FontSize="14" Margin="0,5,0,0"/>
                            <Border Height="1" Background="{StaticResource GlassBorder}" Margin="0,15"/>
                        </StackPanel>

                        <Button Grid.Row="1" Content="Dắt Khách Vào Bàn Này" 
                                Command="{Binding AssignTableCommand}"
                                Background="{DynamicResource AccentGradient}" Height="40" FontSize="14" Margin="0,0,0,15">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding SelectedBan.TrangThai}" Value="Trống"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <ScrollViewer Grid.Row="2">
                            <ItemsControl ItemsSource="{Binding ChiTietDonHang}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding TenMonHienThi}" Foreground="White" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding GhiChu}" 
                                                           Visibility="{Binding GhiChu, Converter={StaticResource NullToBoolConverter}}"
                                                           Foreground="#94A3B8" FontSize="11" FontStyle="Italic" TextWrapping="Wrap"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ThanhTien, StringFormat='N0'}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding SoLuong, StringFormat='x{0}'}" Foreground="{StaticResource TextSecondary}" FontSize="12" HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <StackPanel Grid.Row="3" Margin="0,15,0,0">
                            <Border Height="1" Background="{StaticResource GlassBorder}" Margin="0,0,0,15"/>
                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="TỔNG CỘNG:" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{Binding TongTienCanThu, StringFormat='{}{0:N0} VNĐ'}" 
                                           Foreground="{StaticResource WarningYellow}" FontWeight="Bold" FontSize="20" HorizontalAlignment="Right"/>
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" x:Name="btnInTamTinh" Click="BtnInTamTinh_Click" 
                                        Command="{Binding PrintBillCommand}"
                                        Height="50" FontSize="13" FontWeight="SemiBold"
                                        Background="{DynamicResource AccentGradient}" Foreground="White">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
                                            <Setter Property="Content" Value="🖨️ In Tạm Tính"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedBan.TrangThai}" Value="Trống">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Setter Property="Opacity" Value="0.3"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding SelectedBan.DaInTamTinh}" Value="True">
                                                    <Setter Property="Content" Value="⚠️ In Lại"/>
                                                    <Setter Property="Foreground" Value="#F59E0B"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Grid.Column="2" Command="{Binding CheckoutCommand}"
                                        Content="✅ Xác Nhận Thu"
                                        Height="50" FontSize="13" FontWeight="Bold"
                                        Background="{StaticResource SuccessGreen}" Foreground="White">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Opacity" Value="0.3"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedBan.DaInTamTinh}" Value="True">
                                                    <Setter Property="IsEnabled" Value="True"/>
                                                    <Setter Property="Opacity" Value="1"/>
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#22C55E" BlurRadius="20" ShadowDepth="0"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <StackPanel VerticalAlignment="Center" Margin="10">
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedBan}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="CÀI ĐẶT BÀN" FontSize="20" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                                <TextBlock Text="Đang chọn:" Foreground="#94A3B8" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedBan.SoBan, StringFormat='Bàn số {0}'}" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                                <TextBlock Text="Tên hiển thị (Tùy chọn):" Foreground="White" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding SelectedBan.TenGoi, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="40" Padding="10,0" FontSize="14" VerticalContentAlignment="Center"
                                         Background="#334155" Foreground="White" BorderBrush="#475569"
                                         CaretBrush="White">
                                    <TextBox.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="5" />
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock Text="Ví dụ: VIP 1, Ngoài trời,..." Foreground="#64748B" FontSize="12" Margin="0,5,0,20" FontStyle="Italic"/>

                                <Button Content="💾 Lưu Thay Đổi" 
                                        Command="{Binding SaveTableSettingsCommand}"
                                        Height="45" Background="#3B82F6" Foreground="White" FontWeight="Bold"
                                        Style="{StaticResource GlassDismissButtonStyle}"/>

                                <Button Content="🗑️ Xóa Bàn Này" 
                                        Command="{Binding DeleteTableCommand}"
                                        CommandParameter="{Binding SelectedBan}"
                                        Margin="0,15,0,0"
                                        Height="45" Background="#EF4444" Foreground="White" FontWeight="Bold"
                                        Style="{StaticResource GlassDismissButtonStyle}"/>
                            </StackPanel>

                            <TextBlock Text="Vui lòng chọn một bàn bên trái để sửa" 
                                       Foreground="#94A3B8" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" FontSize="16">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedBan}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>