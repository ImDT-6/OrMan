<UserControl x:Class="GymManagement.Views.Admin.BepView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:helpers="clr-namespace:GymManagement.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- [FIX LỖI] Khai báo Converter ở đây -->
            <helpers:NullToBoolConverter x:Key="NullToBoolConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource MainBackgroundGradient}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="DANH SÁCH CHỜ CHẾ BIẾN" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding DanhSachCanLam}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="300" Background="#20FFFFFF" CornerRadius="10" Margin="0,0,15,15" Padding="15" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#EF4444" CornerRadius="5" Padding="8,3">
                                                <TextBlock Text="{Binding SoBan, StringFormat='Bàn {0}'}" FontWeight="Bold" Foreground="White"/>
                                            </Border>
                                            <TextBlock Text="{Binding ThoiGianOrder}" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center" Margin="10,0,0,0" FontStyle="Italic"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Grid.Row="1" Text="{Binding ChiTiet.TenMonHienThi}" FontSize="18" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>

                                    <StackPanel Grid.Row="2" Margin="0,5,0,15">
                                        <TextBlock Text="{Binding ChiTiet.GhiChu}" Foreground="{StaticResource WarningYellow}" FontStyle="Italic" Visibility="{Binding ChiTiet.GhiChu, Converter={StaticResource NullToBoolConverter}}"/>
                                        <TextBlock Text="{Binding ChiTiet.SoLuong, StringFormat='Số lượng: {0}'}" Foreground="White" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Row="3" Content="ĐÃ XONG / RA MÓN" 
                                            Command="{Binding DataContext.XongMonCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource GlassButtonStyle}" Background="{StaticResource SuccessGreen}" Height="40"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>