<UserControl x:Class="GymManagement.Views.Admin.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- [FIX] Tạo Style NavButtonStyle mới/sửa đổi để hỗ trợ việc set màu từ Code-behind -->
            <!-- Style này được đơn giản hóa để không bị các Trigger khác làm phiền -->
            <Style x:Key="AdminNavButtonStyle" TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                <!-- Remove IsMouseOver triggers from the base style if needed, or ensure they don't override the color set by code-behind -->
                <!-- For now, we rely on the NavButtonStyle structure and manually set the foreground/background -->
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <StaticResource ResourceKey="MainBackgroundGradient"/>
        </Grid.Background>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- MENU NGANG (CỐ ĐỊNH) -->
                <RowDefinition Height="*"/>
                <!-- NỘI DUNG (THAY ĐỔI) -->
            </Grid.RowDefinitions>

            <!-- 1. TOP NAVIGATION BAR -->
            <Border Grid.Row="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Margin="0,0,0,20" Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Logo -->
                        <ColumnDefinition Width="*"/>
                        <!-- Menu -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Logout -->
                    </Grid.ColumnDefinitions>

                    <!-- Logo (Giữ nguyên) -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                        <Border Width="45" Height="45" CornerRadius="12" Background="{StaticResource AccentGradient}" Margin="0,0,15,0">
                            <TextBlock Text="MÌ" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="QUẢN LÝ MÌ CAY" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Admin Dashboard" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                        </StackPanel>
                        <Border Width="1" Height="30" Background="{StaticResource GlassBorder}" Margin="20,0"/>
                    </StackPanel>

                    <!-- Menu Items -->
                    <!-- [FIX] Thêm x:Name cho StackPanel và các Button -->
                    <StackPanel x:Name="MenuItemsPanel" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="MenuButtonTongQuan" Content="Tổng Quan" Tag="{StaticResource IconDashboardGeo}" Click="MenuButton_Click" Style="{StaticResource NavButtonStyle}" Foreground="White" Background="{StaticResource AccentGradient}" Margin="0,0,10,0"/>
                        <Button x:Name="MenuButtonQuanLyBan" Content="Quản Lý Bàn" Tag="{StaticResource IconTableGeo}" Click="MenuButton_Click" Style="{StaticResource NavButtonStyle}" Margin="0,0,10,0"/>
                        <Button x:Name="MenuButtonThucDon" Content="Thực Đơn" Tag="{StaticResource IconFoodGeo}" Click="MenuButton_Click" Style="{StaticResource NavButtonStyle}" Margin="0,0,10,0"/>
                        <Button x:Name="MenuButtonDoanhThu" Content="Doanh Thu" Tag="{StaticResource IconMoneyGeo}" Click="MenuButton_Click" Style="{StaticResource NavButtonStyle}" Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- Logout (Giữ nguyên) -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center" Margin="0,0,15,0" HorizontalAlignment="Right">
                            <TextBlock Text="Xin chào, Admin" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            <TextBlock Text="Chi nhánh 1" Foreground="{StaticResource TextSecondary}" FontSize="12" HorizontalAlignment="Right"/>
                        </StackPanel>
                        <Button Content="Thoát" Tag="{StaticResource IconLogoutGeo}" Click="Button_DangXuat_Click" Style="{StaticResource NavButtonStyle}" Foreground="{StaticResource DangerRed}" Background="#10EF4444" Height="40" Padding="15,0" Margin="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2. KHU VỰC NỘI DUNG THAY ĐỔI -->
            <ContentControl x:Name="AdminContentArea" Grid.Row="1"/>
        </Grid>
    </Grid>
</UserControl>