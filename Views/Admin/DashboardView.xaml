<UserControl x:Class="OrMan.Views.Admin.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:OrMan.ViewModels"
             xmlns:helpers="clr-namespace:OrMan.Helpers"
             xmlns:local="clr-namespace:OrMan.Views.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <helpers:IndexConverter x:Key="IndexConverter"/>
            <helpers:RankToColorConverter x:Key="RankToColorConverter"/>

            <!-- [ĐÃ CẬP NHẬT] Các Converter mới -->
            <local:RequestTypeToBrushConverter x:Key="RequestTypeToBrushConverter"/>
            <local:RequestCollectionToStatusConverter x:Key="RequestCollectionToStatusConverter"/>
            <local:BanAnToDisplayStringConverter x:Key="BanAnToDisplayStringConverter"/>

            <!-- Style cho RadioButton trong thanh trượt (giữ nguyên) -->
            <Style x:Key="SlidingFilterRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- [ĐÃ NÂNG CẤP] Style cho Tooltip Chart (2 Dòng) -->
            <Style x:Key="ChartToolTipStyle" TargetType="ToolTip">
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="HasDropShadow" Value="True"/>
                <Setter Property="Placement" Value="MousePoint"/>
                <Setter Property="VerticalOffset" Value="-10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToolTip">
                            <Border Background="#E61E293B" CornerRadius="8" BorderBrush="#3B82F6" BorderThickness="1" Padding="12,8">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                </Border.Effect>
                                <StackPanel>
                                    <!-- Dòng 1: Thời gian -->
                                    <TextBlock Text="{Binding Content.TooltipHeader, RelativeSource={RelativeSource TemplatedParent}}" 
                                               Foreground="{StaticResource TextSecondary}" 
                                               FontSize="11" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <!-- Dòng 2: Số tiền -->
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Doanh thu:" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Content.TooltipRevenue, RelativeSource={RelativeSource TemplatedParent}}" 
                                                   Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style cho TabControl (giữ nguyên) -->
            <Style x:Key="SlidingTabControlStyle" TargetType="TabControl">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabControl">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <TabPanel IsItemsHost="True" Background="Transparent" ZIndex="1"/>
                                    <Border x:Name="PART_Indicator" Height="3" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                                            Background="{StaticResource WarningYellow}" CornerRadius="1.5" Width="0">
                                        <Border.RenderTransform>
                                            <TranslateTransform x:Name="IndicatorTransform" X="0"/>
                                        </Border.RenderTransform>
                                    </Border>
                                    <Border BorderBrush="#30FFFFFF" BorderThickness="0,0,0,1" VerticalAlignment="Bottom"/>
                                </Grid>
                                <ContentPresenter ContentSource="SelectedContent" Grid.Row="1"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style TabItem (giữ nguyên) -->
            <Style x:Key="DashboardTabItemStyle" TargetType="TabItem">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="Bd" BorderBrush="Transparent" BorderThickness="0" Padding="15,10" Margin="0,0,10,0">
                                <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- CỘT TRÁI (Biểu đồ & Summary) -->
        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 4 Thẻ Summary -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="DOANH THU" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <Path Data="{StaticResource IconMoneyGeo}" Fill="{StaticResource SuccessGreen}" Height="14" Stretch="Uniform" HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock Text="{Binding DoanhThuNgay}" Foreground="{StaticResource SuccessGreen}" FontWeight="Bold" FontSize="22"/>
                        <TextBlock Text="{Binding TangTruongText}" Foreground="{Binding TangTruongColor}" FontSize="10" Margin="0,2,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="ĐƠN HÀNG" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <Path Data="{StaticResource IconFoodGeo}" Fill="#3B82F6" Height="14" Stretch="Uniform" HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock Text="{Binding SoDonHomNay}" Foreground="White" FontWeight="Bold" FontSize="22"/>
                        <TextBlock Text="{Binding TangTruongDonHangText}" Foreground="{Binding TangTruongDonHangColor}" FontSize="10" Margin="0,2,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="BÀN HOẠT ĐỘNG" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="🍽️" FontSize="12" HorizontalAlignment="Right" Foreground="MediumPurple"/>
                        </Grid>
                        <TextBlock Text="{Binding BanHoatDongText}" Foreground="MediumPurple" FontWeight="Bold" FontSize="22"/>
                        <TextBlock Text="{Binding CongSuatText}" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="6" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="ĐÁNH GIÁ" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <Path Data="{StaticResource StarIcon}" Fill="#F59E0B" Height="14" Stretch="Uniform" HorizontalAlignment="Right"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding DiemDanhGiaTB, StringFormat={}{0:0.0}}" Foreground="#F59E0B" FontWeight="Bold" FontSize="22"/>
                            <TextBlock Text="/5" Foreground="{StaticResource TextSecondary}" FontSize="14" VerticalAlignment="Bottom" Margin="2,0,0,3"/>
                        </StackPanel>
                        <TextBlock Text="{Binding SoLuotDanhGia, StringFormat={}{0} lượt góp ý}" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Biểu Đồ -->
            <Border Grid.Row="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="PHÂN TÍCH DOANH THU" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Theo dõi biến động doanh thu theo thời gian thực" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,3,0,0"/>
                        </StackPanel>

                        <Border HorizontalAlignment="Right" VerticalAlignment="Top" 
                                Background="#10FFFFFF" CornerRadius="16" Padding="4">
                            <Grid x:Name="FilterGrid">
                                <Border x:Name="FilterIndicator" HorizontalAlignment="Left" VerticalAlignment="Stretch"
                                        CornerRadius="12" Width="0" Opacity="0">
                                    <Border.Background>
                                        <SolidColorBrush Color="#3B82F6"/>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#06B6D4" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                                    </Border.Effect>
                                    <Border.RenderTransform>
                                        <TranslateTransform x:Name="FilterIndicatorTransform" X="0"/>
                                    </Border.RenderTransform>
                                </Border>

                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Hôm nay" IsChecked="True" 
                                                 Style="{StaticResource SlidingFilterRadioButtonStyle}" 
                                                 Command="{Binding ChangeFilterCommand}" CommandParameter="Day"
                                                 Click="FilterOption_Click" Loaded="FilterOption_Loaded"/>

                                    <RadioButton Content="Tuần này" 
                                                 Style="{StaticResource SlidingFilterRadioButtonStyle}" Margin="2,0"
                                                 Command="{Binding ChangeFilterCommand}" CommandParameter="Week"
                                                 Click="FilterOption_Click"/>

                                    <RadioButton Content="Tháng này" 
                                                 Style="{StaticResource SlidingFilterRadioButtonStyle}" 
                                                 Command="{Binding ChangeFilterCommand}" CommandParameter="Month"
                                                 Click="FilterOption_Click"/>

                                    <RadioButton Content="Năm này" 
                                                 Style="{StaticResource SlidingFilterRadioButtonStyle}" Margin="2,0,0,0"
                                                 Command="{Binding ChangeFilterCommand}" CommandParameter="Year"
                                                 Click="FilterOption_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" Margin="0,0,15,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding AxisMax}" Grid.Row="0" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="{Binding AxisMidHigh}" Grid.Row="1" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="{Binding AxisMid}" Grid.Row="2" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="{Binding AxisMidLow}" Grid.Row="3" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="0" Grid.Row="3" VerticalAlignment="Bottom" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="1" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="2" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="3" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,1"/>
                            </Grid>

                            <ItemsControl Grid.Row="0" ItemsSource="{Binding DoanhThuTheoGio}" VerticalAlignment="Stretch">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid VerticalAlignment="Stretch" Background="Transparent">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="{Binding EmptyStar}"/>
                                                <RowDefinition Height="{Binding BarStar}"/>
                                            </Grid.RowDefinitions>

                                            <!-- [ĐÃ BINDING TOOLTIP MỚI] Dùng Binding . để lấy cả object -->
                                            <Border x:Name="BarColumn" Grid.Row="1" CornerRadius="4,4,0,0" MinHeight="2" VerticalAlignment="Stretch"
                                                    ToolTipService.InitialShowDelay="10"
                                                    ToolTipService.ShowDuration="10000">
                                                <Border.ToolTip>
                                                    <ToolTip Content="{Binding .}" Style="{StaticResource ChartToolTipStyle}"/>
                                                </Border.ToolTip>
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                                        <GradientStop Color="#60A5FA" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="BarColumn" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                            <GradientStop Color="#60A5FA" Offset="0"/>
                                                            <GradientStop Color="#93C5FD" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter TargetName="BarColumn" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="#60A5FA" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding DoanhThuTheoGio}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TimeLabel}" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- CỘT PHẢI -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cần Xử Lý [ĐÃ CẬP NHẬT HEADER DÙNG MULTIBINDING] -->
            <!-- Viền Header cập nhật tức thì -->
            <Border Grid.Row="0" Background="{StaticResource GlassBackground}" 
                    BorderThickness="1" CornerRadius="20" Padding="20" Margin="0,0,0,20">
                <Border.BorderBrush>
                    <MultiBinding Converter="{StaticResource RequestCollectionToStatusConverter}" ConverterParameter="Brush">
                        <Binding Path="BanCanXuLy"/>
                        <Binding Path="BanCanXuLy.Count"/>
                    </MultiBinding>
                </Border.BorderBrush>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <!-- Text Header cập nhật tức thì -->
                        <TextBlock FontSize="16" FontWeight="Bold" VerticalAlignment="Center">
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource RequestCollectionToStatusConverter}" ConverterParameter="Text">
                                    <Binding Path="BanCanXuLy"/>
                                    <Binding Path="BanCanXuLy.Count"/>
                                </MultiBinding>
                            </TextBlock.Text>
                            <TextBlock.Foreground>
                                <MultiBinding Converter="{StaticResource RequestCollectionToStatusConverter}" ConverterParameter="Brush">
                                    <Binding Path="BanCanXuLy"/>
                                    <Binding Path="BanCanXuLy.Count"/>
                                </MultiBinding>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <!-- Badge số lượng cập nhật màu nền tức thì -->
                        <Border CornerRadius="10" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <Border.Background>
                                <MultiBinding Converter="{StaticResource RequestCollectionToStatusConverter}" ConverterParameter="BrushLight">
                                    <Binding Path="BanCanXuLy"/>
                                    <Binding Path="BanCanXuLy.Count"/>
                                </MultiBinding>
                            </Border.Background>
                            <TextBlock Text="{Binding BanCanXuLy.Count}" FontWeight="Bold" FontSize="12">
                                <TextBlock.Foreground>
                                    <MultiBinding Converter="{StaticResource RequestCollectionToStatusConverter}" ConverterParameter="Brush">
                                        <Binding Path="BanCanXuLy"/>
                                        <Binding Path="BanCanXuLy.Count"/>
                                    </MultiBinding>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </Border>
                    </StackPanel>

                    <ListBox x:Name="ListBoxCanXuLy" Grid.Row="1" ItemsSource="{Binding BanCanXuLy}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" MaxHeight="240" Padding="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Margin" Value="0,0,0,10"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <!-- BORDER CHÍNH: Bind vào 'toàn bộ object' (.) để converter tự check loại -->
                                            <Border x:Name="ItemBorder" CornerRadius="12" 
                                                    Background="{Binding ., Converter={StaticResource RequestTypeToBrushConverter}, ConverterParameter=Light}" 
                                                    BorderBrush="Transparent" BorderThickness="1">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="{Binding ., Converter={StaticResource RequestTypeToBrushConverter}, ConverterParameter=Hover}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#50FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="12" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- ICON BÀN -->
                                        <Border Grid.Column="0" Width="45" Height="45" CornerRadius="12" 
                                                Background="{Binding ., Converter={StaticResource RequestTypeToBrushConverter}, ConverterParameter=Solid}">
                                            <Grid>
                                                <TextBlock Text="{Binding SoBan}" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="15,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TenBan}" Foreground="White" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,3"/>
                                            <!-- TEXT YÊU CẦU: Dùng converter mới để hiện "Thanh toán & Hỗ trợ" -->
                                            <TextBlock Text="{Binding Converter={StaticResource BanAnToDisplayStringConverter}}" 
                                                       Foreground="#FF8A80" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- NÚT XỬ LÝ -->
                                        <Button Grid.Column="2" Content="Xử lý" 
                                                Command="{Binding DataContext.ProcessRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}" 
                                                VerticalAlignment="Center" Height="32" FontSize="13" FontWeight="SemiBold" Foreground="White" Cursor="Hand" BorderThickness="0"
                                                Background="{Binding ., Converter={StaticResource RequestTypeToBrushConverter}, ConverterParameter=Solid}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="BtnBorder" CornerRadius="16" Background="{TemplateBinding Background}" RenderTransformOrigin="0.5,0.5">
                                                        <Border.RenderTransform>
                                                            <ScaleTransform x:Name="ScaleTrans" ScaleX="1" ScaleY="1"/>
                                                        </Border.RenderTransform>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="18,0"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="BtnBorder" Property="Opacity" Value="0.85"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="BtnBorder" Property="Opacity" Value="0.7"/>
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleX" To="0.96" Duration="0:0:0.05"/>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleY" To="0.96" Duration="0:0:0.05"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.05"/>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.05"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="1" Text="Hiện không có yêu cầu nào." Foreground="{StaticResource TextSecondary}" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BanCanXuLy.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- TABCONTROL (Giữ nguyên) -->
            <Border Grid.Row="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="15">
                <TabControl x:Name="FeedbackTabControl" 
                            Style="{StaticResource SlidingTabControlStyle}"
                            Loaded="FeedbackTabControl_Loaded"
                            SelectionChanged="FeedbackTabControl_SelectionChanged"
                            Background="Transparent" BorderThickness="0" Padding="0">

                    <!-- TAB 1: GÓP Ý MỚI -->
                    <TabItem Header="Góp Ý Mới" Style="{StaticResource DashboardTabItemStyle}">
                        <Grid Margin="0,10,0,0">
                            <TextBlock Text="Chưa có đánh giá nào." Foreground="{StaticResource TextSecondary}" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic"
                                       Visibility="{Binding IsNoReviews, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                            <ListBox ItemsSource="{Binding DanhSachDanhGia}" Background="Transparent" BorderThickness="0" 
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled" Padding="0">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Margin" Value="0,0,0,10"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#10FFFFFF" CornerRadius="12" Padding="12" BorderBrush="#20FFFFFF" BorderThickness="1">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding SoSao}" Foreground="#F59E0B" FontWeight="Bold" FontSize="14"/>
                                                        <Path Data="{StaticResource StarIcon}" Fill="#F59E0B" Height="12" Stretch="Uniform" Margin="4,0,0,2" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding SoDienThoai}" Foreground="{StaticResource TextSecondary}" Margin="10,0,0,0" FontSize="12" VerticalAlignment="Center" FontStyle="Italic"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding NgayTao, StringFormat='HH:mm - dd/MM'}" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right" FontSize="11" Opacity="0.7"/>
                                                </Grid>
                                                <StackPanel Grid.Row="1">
                                                    <TextBlock Text="{Binding CacTag}" Foreground="White" FontSize="13" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding NoiDung}" Foreground="{StaticResource TextSecondary}" FontSize="13" TextWrapping="Wrap" LineHeight="18">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding NoiDung}" Value="">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding NoiDung}" Value="{x:Null}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>

                    <!-- TAB 2: TOP MÓN -->
                    <TabItem Header="Top Món" Style="{StaticResource DashboardTabItemStyle}">
                        <Grid Margin="0,10,0,0">
                            <ListBox ItemsSource="{Binding TopMonAn}" Background="Transparent" BorderThickness="0" Padding="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <ContentPresenter/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,15">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="35"/>
                                                <ColumnDefinition Width="55"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                       Text="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource IndexConverter}}"
                                                       Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource RankToColorConverter}}"
                                                       FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>

                                            <Border Grid.Column="1" CornerRadius="12" ClipToBounds="True" Height="45" Width="45" Background="#15FFFFFF" HorizontalAlignment="Left" VerticalAlignment="Center">
                                                <Image Source="{Binding MonAn.HinhAnhUrl}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="2" Margin="10,0,15,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding MonAn.TenMon}" Foreground="White" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis" ToolTip="{Binding MonAn.TenMon}"/>
                                                <TextBlock Text="{Binding MonAn.MaMon}" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding SoLuongBan}" Foreground="{StaticResource SuccessGreen}" FontWeight="Bold" FontSize="15"/>
                                                <TextBlock Text=" bán" Foreground="{StaticResource SuccessGreen}" FontSize="12" Opacity="0.8" VerticalAlignment="Bottom" Margin="3,0,0,2"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </TabItem>

                </TabControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>