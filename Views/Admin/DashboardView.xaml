<UserControl x:Class="GymManagement.Views.Admin.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:GymManagement.ViewModels"
             xmlns:helpers="clr-namespace:GymManagement.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- [QUAN TRỌNG] Khai báo Converter để tính chiều cao cột -->
            <helpers:HeightConverter x:Key="HeightConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- CỘT TRÁI -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">

            <!-- Cards Tổng Quan -->
            <UniformGrid Columns="2" Rows="1" Margin="0,0,0,20">
                <!-- Card Doanh Thu -->
                <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="25" Margin="0,0,10,0">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Doanh Thu Hôm Nay" Foreground="{StaticResource TextSecondary}" FontSize="14"/>
                            <TextBlock Text="{Binding DoanhThuNgay}" Foreground="{StaticResource SuccessGreen}" FontWeight="Bold" FontSize="40" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding TangTruongText}" Foreground="{StaticResource SuccessGreen}" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Width="50" Height="50" CornerRadius="15" Background="#2010B981" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Path Data="{StaticResource IconMoneyGeo}" Fill="{StaticResource SuccessGreen}" Width="24" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Card Đơn Hàng -->
                <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="25" Margin="10,0,0,0">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Đơn Hàng Đã Phục Vụ" Foreground="{StaticResource TextSecondary}" FontSize="14"/>
                            <TextBlock Text="{Binding SoDonHomNay}" Foreground="White" FontWeight="Bold" FontSize="40" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding TrungBinhDon}" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Width="50" Height="50" CornerRadius="15" Background="#203B82F6" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Path Data="{StaticResource IconFoodGeo}" Fill="#3B82F6" Width="24" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- [ĐÃ CẬP NHẬT] BIỂU ĐỒ VỚI TRỤC TUNG & CỘT ĐỘNG -->
            <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="25" Padding="25" Height="350">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Title -->
                        <RowDefinition Height="*"/>
                        <!-- Chart Area -->
                    </Grid.RowDefinitions>

                    <TextBlock Text="BIỂU ĐỒ DOANH THU THEO GIỜ" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                    <!-- Khu vực biểu đồ -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- Trục Y (Số tiền) -->
                            <ColumnDefinition Width="*"/>
                            <!-- Các Cột -->
                        </Grid.ColumnDefinitions>

                        <!-- 1. Trục Tung (Y-Axis Labels) -->
                        <!-- Margin Bottom 30px để chừa chỗ cho trục hoành (Giờ) -->
                        <Grid Grid.Column="0" Margin="0,0,10,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Các mốc giá trị giả định (Khớp với tham số Converter 2.000.000) -->
                            <TextBlock Text="2M" Grid.Row="0" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <TextBlock Text="1.5M" Grid.Row="1" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <TextBlock Text="1M" Grid.Row="2" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <TextBlock Text="500k" Grid.Row="3" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <!-- Số 0 nằm ở đáy của Row cuối cùng -->
                            <TextBlock Text="0" Grid.Row="3" VerticalAlignment="Bottom" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                        </Grid>

                        <!-- 2. Lưới ngang & Cột Biểu Đồ (Chồng lên nhau trong cùng 1 Grid để khớp vị trí) -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Vùng vẽ biểu đồ -->
                                <RowDefinition Height="30"/>
                                <!-- Vùng hiển thị giờ (Trục hoành) -->
                            </Grid.RowDefinitions>

                            <!-- Lớp 1: Các đường kẻ ngang (Grid Lines) -->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="1" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="2" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="3" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,1"/>
                                <!-- Đường đáy (Vạch số 0) -->
                            </Grid>

                            <!-- Lớp 2: Các cột biểu đồ -->
                            <ItemsControl Grid.Row="0" ItemsSource="{Binding DoanhThuTheoGio}" VerticalAlignment="Bottom">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <!-- Cột -->
                                                <RowDefinition Height="Auto"/>
                                                <!-- Khoảng đệm để nối với trục hoành -->
                                            </Grid.RowDefinitions>

                                            <!-- CỘT: Chiều cao (Height) được tính toán tự động -->
                                            <!-- VerticalAlignment="Bottom" để cột mọc từ đáy (vạch số 0) lên -->
                                            <!-- ConverterParameter='2000000': Nghĩa là 2 triệu sẽ full cột -->
                                            <Border Grid.Row="0" Background="{StaticResource AccentGradient}" 
                                                    CornerRadius="5,5,0,0"  
                                                    Height="{Binding Value, Converter={StaticResource HeightConverter}, ConverterParameter='2000000'}" 
                                                    VerticalAlignment="Bottom" 
                                                    ToolTip="{Binding Value, StringFormat='{}{0:N0} VNĐ'}">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Opacity" Value="0.8"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Lớp 3: Trục Hoành (Giờ) - Nằm ở Row bên dưới -->
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding DoanhThuTheoGio}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Key}" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>

        <!-- CỘT PHẢI (Giữ nguyên như cũ) -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. Danh Sách Cần Xử Lý Gấp -->
            <Border Grid.Row="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource DangerRed}" BorderThickness="1" CornerRadius="20" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="⚠️ CẦN XỬ LÝ GẤP" FontSize="16" FontWeight="Bold" Foreground="#EF4444" VerticalAlignment="Center"/>
                        <Border Background="#20EF4444" CornerRadius="10" Padding="8,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding BanCanXuLy.Count}" Foreground="#EF4444" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <ListBox x:Name="ListBoxCanXuLy" Grid.Row="1" ItemsSource="{Binding BanCanXuLy}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#10EF4444" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="40" Height="40" CornerRadius="10" Background="#EF4444">
                                            <TextBlock Text="{Binding SoBan}" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TenBan}" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Text="Yêu cầu thanh toán" Foreground="#EF4444" FontSize="12"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" Content="Xem &amp; Xử lý" 
                                                Click="BtnXuLy_Click"
                                                Tag="{Binding}"
                                                Style="{StaticResource GlassButtonStyle}" Height="30" FontSize="12" Padding="10,0" Background="#EF4444"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="1" Text="Hiện không có yêu cầu nào." Foreground="#94A3B8" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BanCanXuLy.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- 2. Top Món Bán Chạy -->
            <Border Grid.Row="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="🔥 TOP MÓN BÁN CHẠY" FontSize="16" FontWeight="Bold" Foreground="#F59E0B" Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding TopMonAn}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border CornerRadius="10" ClipToBounds="True">
                                        <Image Source="{Binding MonAn.HinhAnhUrl}" Stretch="UniformToFill"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding MonAn.TenMon}" Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding MonAn.MaMon}" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" Text="{Binding SoLuongBan, StringFormat='{}{0} đã bán'}" Foreground="{StaticResource SuccessGreen}" FontWeight="Bold" VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>