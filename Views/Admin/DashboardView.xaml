<UserControl x:Class="OrMan.Views.Admin.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:OrMan.ViewModels"
             xmlns:helpers="clr-namespace:OrMan.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <helpers:IndexConverter x:Key="IndexConverter"/>
            <helpers:RankToColorConverter x:Key="RankToColorConverter"/>
            <Style x:Key="FilterRadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="8" BorderThickness="1" BorderBrush="Transparent">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#203B82F6"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="#3B82F6"/>
                                    <Setter Property="Foreground" Value="#3B82F6"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="DOANH THU" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <Path Data="{StaticResource IconMoneyGeo}" Fill="{StaticResource SuccessGreen}" Height="14" Stretch="Uniform" HorizontalAlignment="Right"/>
                        </Grid>

                        <TextBlock Text="{Binding DoanhThuNgay}" Foreground="{StaticResource SuccessGreen}" FontWeight="Bold" FontSize="22"/>

                        <TextBlock Text="{Binding TangTruongText}" Foreground="{Binding TangTruongColor}" FontSize="10" Margin="0,2,0,0" FontWeight="SemiBold"/>

                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="ĐƠN HÀNG" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <Path Data="{StaticResource IconFoodGeo}" Fill="#3B82F6" Height="14" Stretch="Uniform" HorizontalAlignment="Right"/>
                        </Grid>
                        <TextBlock Text="{Binding SoDonHomNay}" Foreground="White" FontWeight="Bold" FontSize="22"/>
                        <TextBlock Text="{Binding TangTruongDonHangText}" Foreground="{Binding TangTruongDonHangColor}" FontSize="10" Margin="0,2,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="BÀN HOẠT ĐỘNG" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="🍽️" FontSize="12" HorizontalAlignment="Right" Foreground="Orange"/>
                        </Grid>
                        <TextBlock Text="{Binding BanHoatDongText}" Foreground="#F59E0B" FontWeight="Bold" FontSize="22"/>
                        <TextBlock Text="{Binding CongSuatText}" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="6" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15" Padding="15">
                    <StackPanel VerticalAlignment="Center">
                        <Grid Margin="0,0,0,5">
                            <TextBlock Text="KHÁCH HÀNG" Foreground="{StaticResource TextSecondary}" FontSize="11" FontWeight="Bold"/>
                            <TextBlock Text="👥" FontSize="12" HorizontalAlignment="Right" Foreground="HotPink" />
                        </Grid>
                        <TextBlock Text="124" Foreground="#EC4899" FontWeight="Bold" FontSize="22"/>
                        <TextBlock Text="3 khách mới" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="PHÂN TÍCH DOANH THU" FontSize="16" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Theo dõi biến động doanh thu theo thời gian thực" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,3,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">

                            <RadioButton Content="Hôm nay" IsChecked="True" 
                 Style="{StaticResource FilterRadioButtonStyle}"
                 Command="{Binding ChangeFilterCommand}" 
                 CommandParameter="Day"/>

                            <RadioButton Content="Tuần này" 
                 Style="{StaticResource FilterRadioButtonStyle}" Margin="5,0"
                 Command="{Binding ChangeFilterCommand}" 
                 CommandParameter="Week"/>

                            <RadioButton Content="Tháng này" 
                 Style="{StaticResource FilterRadioButtonStyle}"
                 Command="{Binding ChangeFilterCommand}" 
                 CommandParameter="Month"/>
                            <RadioButton Content="Năm này" 
                 Style="{StaticResource FilterRadioButtonStyle}" Margin="5,0,0,0"
                 Command="{Binding ChangeFilterCommand}" 
                 CommandParameter="Year"/>

                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="0,0,15,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding AxisMax}" Grid.Row="0" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="{Binding AxisMidHigh}" Grid.Row="1" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="{Binding AxisMid}" Grid.Row="2" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="{Binding AxisMidLow}" Grid.Row="3" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                            <TextBlock Text="0" Grid.Row="3" VerticalAlignment="Bottom" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </Grid>

                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="1" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="2" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="3" BorderBrush="#10FFFFFF" BorderThickness="0,1,0,1"/>
                            </Grid>

                            <ItemsControl Grid.Row="0" ItemsSource="{Binding DoanhThuTheoGio}" VerticalAlignment="Stretch">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid VerticalAlignment="Stretch">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="{Binding EmptyStar}"/>
                                                <RowDefinition Height="{Binding BarStar}"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,-20,0,0" Panel.ZIndex="1">
                                                <Border Background="#20303030" CornerRadius="5" Padding="5,2" HorizontalAlignment="Center" Visibility="{Binding Value, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Value, StringFormat='{}{0:N0}'}" FontSize="10" Foreground="White"/>
                                                </Border>
                                            </StackPanel>

                                            <Border Grid.Row="1" CornerRadius="4,4,0,0" ToolTip="{Binding TooltipText}" MinHeight="2" VerticalAlignment="Stretch">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                                        <GradientStop Color="#60A5FA" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <ItemsControl Grid.Row="1" ItemsSource="{Binding DoanhThuTheoGio}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TimeLabel}" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource DangerRed}" BorderThickness="1" CornerRadius="20" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="⚠️ CẦN XỬ LÝ GẤP" FontSize="16" FontWeight="Bold" Foreground="{StaticResource DangerRed}" VerticalAlignment="Center"/>
                        <Border Background="#20EF4444" CornerRadius="10" Padding="8,2" Margin="10,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding BanCanXuLy.Count}" Foreground="{StaticResource DangerRed}" FontWeight="Bold" FontSize="12"/>
                        </Border>
                    </StackPanel>

                    <ListBox x:Name="ListBoxCanXuLy" 
                             Grid.Row="1" 
                             ItemsSource="{Binding BanCanXuLy}" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             MaxHeight="240"
                             Padding="0">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Margin" Value="0,0,0,10"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="ItemBorder" 
                                                    CornerRadius="12" 
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="Transparent"
                                                    BorderThickness="1">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#25EF4444"/>
                                                    <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#50EF4444"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="ItemBorder" Property="Background" Value="#25EF4444"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#10EF4444" CornerRadius="12" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Width="45" Height="45" CornerRadius="12" Background="{StaticResource DangerRed}">
                                            <Grid>
                                                <TextBlock Text="{Binding SoBan}" 
                                                           Foreground="White" 
                                                           FontWeight="Bold" 
                                                           FontSize="18" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="15,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TenBan}" Foreground="White" FontWeight="SemiBold" FontSize="15" Margin="0,0,0,3"/>
                                            <TextBlock Text="{Binding HienThiYeuCau}" Foreground="#FF8A80" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <Button Grid.Column="2" 
                                                Content="Xử lý"
                                                Command="{Binding DataContext.ProcessRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                VerticalAlignment="Center"
                                                Height="32"
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Cursor="Hand"
                                                BorderThickness="0">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="BtnBorder" 
                                                            CornerRadius="16" 
                                                            Background="#EF4444" 
                                                            RenderTransformOrigin="0.5,0.5">
                                                        <Border.RenderTransform>
                                                            <ScaleTransform x:Name="ScaleTrans" ScaleX="1" ScaleY="1"/>
                                                        </Border.RenderTransform>
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="18,0"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="BtnBorder" Property="Background" Value="#FF6B6B"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="BtnBorder" Property="Background" Value="#C62828"/>
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleX" To="0.96" Duration="0:0:0.05"/>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleY" To="0.96" Duration="0:0:0.05"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.05"/>
                                                                        <DoubleAnimation Storyboard.TargetName="ScaleTrans" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.05"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="1" Text="Hiện không có yêu cầu nào." Foreground="{StaticResource TextSecondary}" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BanCanXuLy.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="🔥 TOP MÓN BÁN CHẠY" FontSize="16" FontWeight="Bold" Foreground="{StaticResource WarningYellow}" Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding TopMonAn}" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Padding="0" 
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource IndexConverter}}"
                                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource RankToColorConverter}}"
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               HorizontalAlignment="Left" 
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>

                                    <Border Grid.Column="1" 
                                            CornerRadius="12" 
                                            ClipToBounds="True" 
                                            Height="45" Width="45" 
                                            Background="#15FFFFFF" 
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center">
                                        <Image Source="{Binding MonAn.HinhAnhUrl}" 
                                               Stretch="UniformToFill"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="2" Margin="10,0,15,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding MonAn.TenMon}" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14" 
                                                   TextTrimming="CharacterEllipsis" 
                                                   ToolTip="{Binding MonAn.TenMon}"/>
                                        <TextBlock Text="{Binding MonAn.MaMon}" 
                                                   Foreground="{StaticResource TextSecondary}" 
                                                   FontSize="12" 
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding SoLuongBan}" 
                                                   Foreground="{StaticResource SuccessGreen}" 
                                                   FontWeight="Bold" 
                                                   FontSize="15"/>
                                        <TextBlock Text=" bán" 
                                                   Foreground="{StaticResource SuccessGreen}" 
                                                   FontSize="12" 
                                                   Opacity="0.8"
                                                   VerticalAlignment="Bottom" 
                                                   Margin="3,0,0,2"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>