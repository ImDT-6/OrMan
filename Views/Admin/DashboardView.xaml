<UserControl x:Class="OrMan.Views.Admin.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:OrMan.ViewModels"
             xmlns:helpers="clr-namespace:OrMan.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1100"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <helpers:IndexConverter x:Key="IndexConverter"/>
            <helpers:RankToColorConverter x:Key="RankToColorConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!-- CỘT TRÁI -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">

            <!-- Cards Tổng Quan -->
            <UniformGrid Columns="2" Rows="1" Margin="0,0,0,20">
                <!-- Card Doanh Thu -->
                <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="25" Margin="0,0,10,0">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Doanh Thu Hôm Nay" Foreground="{StaticResource TextSecondary}" FontSize="14"/>
                            <TextBlock Text="{Binding DoanhThuNgay}" Foreground="{StaticResource SuccessGreen}" FontWeight="Bold" FontSize="40" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding TangTruongText}" Foreground="{StaticResource SuccessGreen}" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Width="50" Height="50" CornerRadius="15" Background="#2010B981" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Path Data="{StaticResource IconMoneyGeo}" Fill="{StaticResource SuccessGreen}" Width="24" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Card Đơn Hàng -->
                <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="25" Margin="10,0,0,0">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Đơn Hàng Đã Phục Vụ" Foreground="{StaticResource TextSecondary}" FontSize="14"/>
                            <TextBlock Text="{Binding SoDonHomNay}" Foreground="White" FontWeight="Bold" FontSize="40" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding TrungBinhDon}" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>
                        <Border Width="50" Height="50" CornerRadius="15" Background="#203B82F6" HorizontalAlignment="Right" VerticalAlignment="Top">
                            <Path Data="{StaticResource IconFoodGeo}" Fill="#3B82F6" Width="24" Stretch="Uniform"/>
                        </Border>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- [ĐÃ CẬP NHẬT] BIỂU ĐỒ VỚI TRỤC TUNG & CỘT ĐỘNG HOÀN TOÀN -->
            <Border Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="25" Padding="25" Height="350">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="BIỂU ĐỒ DOANH THU THEO GIỜ" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 1. Trục Tung (Dynamic Y-Axis Labels) -->
                        <Grid Grid.Column="0" Margin="0,0,10,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Binding vào các biến AxisMax, AxisMid... trong ViewModel -->
                            <TextBlock Text="{Binding AxisMax}" Grid.Row="0" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <TextBlock Text="{Binding AxisMidHigh}" Grid.Row="1" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <TextBlock Text="{Binding AxisMid}" Grid.Row="2" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <TextBlock Text="{Binding AxisMidLow}" Grid.Row="3" VerticalAlignment="Top" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                            <TextBlock Text="0" Grid.Row="3" VerticalAlignment="Bottom" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                        </Grid>

                        <!-- 2. Lưới ngang & Cột Biểu Đồ -->
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Vùng vẽ (220px) -->
                                <RowDefinition Height="30"/>
                                <!-- Vùng giờ -->
                            </Grid.RowDefinitions>

                            <!-- Lưới ngang -->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="1" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="2" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,0"/>
                                <Border Grid.Row="3" BorderBrush="#20FFFFFF" BorderThickness="0,1,0,1"/>
                            </Grid>

                            <!-- CỘT BIỂU ĐỒ (Binding Width/Height trực tiếp) -->
                            <ItemsControl Grid.Row="0" ItemsSource="{Binding DoanhThuTheoGio}" VerticalAlignment="Bottom">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <!-- [MỚI] Dùng StackPanel để xếp số tiền lên trên cột -->
                                            <StackPanel VerticalAlignment="Bottom">
                                                <!-- Số tiền trên đỉnh cột -->
                                                <!-- Chỉ hiện nếu giá trị > 0 -->
                                                <TextBlock Text="{Binding Value, StringFormat='{}{0:N0}'}" 
                                                           FontSize="10" 
                                                           Foreground="{StaticResource TextSecondary}" 
                                                           HorizontalAlignment="Center" 
                                                           Margin="0,0,0,3">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Value}" Value="0">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>

                                                <!-- Cột biểu đồ -->
                                                <Border Background="{StaticResource AccentGradient}" 
                                                        CornerRadius="5,5,0,0"  
                                                        Height="{Binding BarHeight}" 
                                                        ToolTip="{Binding TooltipText}">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" Value="0.8"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Trục Hoành (Giờ) -->
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding DoanhThuTheoGio}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Rows="1"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TimeLabel}" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>

        <!-- CỘT PHẢI (Giữ nguyên) -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 1. Danh Sách Cần Xử Lý Gấp -->
            <Border Grid.Row="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource DangerRed}" BorderThickness="1" CornerRadius="20" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="⚠️ CẦN XỬ LÝ GẤP" FontSize="16" FontWeight="Bold" Foreground="#EF4444" VerticalAlignment="Center"/>
                        <Border Background="#20EF4444" CornerRadius="10" Padding="8,2" Margin="10,0,0,0">
                            <TextBlock Text="{Binding BanCanXuLy.Count}" Foreground="#EF4444" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>

                    <ListBox x:Name="ListBoxCanXuLy" Grid.Row="1" ItemsSource="{Binding BanCanXuLy}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#10EF4444" CornerRadius="10" Padding="10" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="40" Height="40" CornerRadius="10" Background="#EF4444">
                                            <TextBlock Text="{Binding SoBan}" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TenBan}" Foreground="White" FontWeight="SemiBold"/>
                                            <!-- [MỚI] Binding vào Property HienThiYeuCau đã tạo trong Model -->
                                            <TextBlock Text="{Binding HienThiYeuCau}" Foreground="#EF4444" FontSize="12" FontStyle="Italic" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="Xử lý" 
                                                Command="{Binding DataContext.ProcessRequestCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource GlassButtonStyle}" 
                                                Height="30" FontSize="12" Padding="15,0" 
                                                Background="#EF4444"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <TextBlock Grid.Row="1" Text="Hiện không có yêu cầu nào." Foreground="#94A3B8" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding BanCanXuLy.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Border>

            <!-- 2. Top Món Bán Chạy -->
            <Border Grid.Row="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="20" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="🔥 TOP MÓN BÁN CHẠY" FontSize="16" FontWeight="Bold" Foreground="#F59E0B" Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding TopMonAn}" 
         Background="Transparent" 
         BorderThickness="0" 
         Padding="0" 
         ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="35"/>
                                        <ColumnDefinition Width="55"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                           Text="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource IndexConverter}}"
                           Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Converter={StaticResource RankToColorConverter}}"
                           FontWeight="Bold" 
                           FontSize="16" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"/>

                                    <Border Grid.Column="1" 
                        CornerRadius="12" 
                        ClipToBounds="True" 
                        Height="45" Width="45" 
                        Background="#15FFFFFF" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">

                                        <Image Source="{Binding MonAn.HinhAnhUrl}" 
                           Stretch="UniformToFill"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="2" Margin="10,0,15,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding MonAn.TenMon}" 
                               Foreground="White" 
                               FontWeight="SemiBold" 
                               FontSize="14" 
                               TextTrimming="CharacterEllipsis" 
                               ToolTip="{Binding MonAn.TenMon}"/>

                                        <TextBlock Text="{Binding MonAn.MaMon}" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" 
                               Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding SoLuongBan}" 
                               Foreground="{StaticResource SuccessGreen}" 
                               FontWeight="Bold" 
                               FontSize="15"/>
                                        <TextBlock Text=" bán" 
                               Foreground="{StaticResource SuccessGreen}" 
                               FontSize="12" 
                               Opacity="0.8"
                               VerticalAlignment="Bottom" 
                               Margin="3,0,0,2"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>