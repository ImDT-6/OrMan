<Window x:Class="OrMan.Views.User.LuckyWheelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vòng Quay May Mắn" Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="SliceTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,35,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Width" Value="80"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="300" 
            BorderBrush="{StaticResource AccentGradient}" BorderThickness="3">
        <Border.Effect>
            <DropShadowEffect Color="#36D1DC" BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Button Click="BtnClose_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,30,30,0"
                    Style="{StaticResource GlassDismissButtonStyle}" Width="40" Height="40">
                <Path Data="{StaticResource IconClose}" Fill="White" Stretch="Uniform" Width="12"/>
            </Button>

            <Grid x:Name="WheelContainer" Width="400" Height="400" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <RotateTransform x:Name="WheelRotation" Angle="0"/>
                </Grid.RenderTransform>

                <Path Data="M200,200 L200,0 A200,200 0 0,1 341.4,58.6 Z" Fill="#EF4444" Opacity="0.8"/>
                <Path Data="M200,200 L341.4,58.6 A200,200 0 0,1 400,200 Z" Fill="#F59E0B" Opacity="0.8"/>
                <Path Data="M200,200 L400,200 A200,200 0 0,1 341.4,341.4 Z" Fill="#10B981" Opacity="0.8"/>
                <Path Data="M200,200 L341.4,341.4 A200,200 0 0,1 200,400 Z" Fill="#3B82F6" Opacity="0.8"/>
                <Path Data="M200,200 L200,400 A200,200 0 0,1 58.6,341.4 Z" Fill="#8B5CF6" Opacity="0.8"/>
                <Path Data="M200,200 L58.6,341.4 A200,200 0 0,1 0,200 Z" Fill="#EC4899" Opacity="0.8"/>
                <Path Data="M200,200 L0,200 A200,200 0 0,1 58.6,58.6 Z" Fill="#6366F1" Opacity="0.8"/>
                <Path Data="M200,200 L58.6,58.6 A200,200 0 0,1 200,0 Z" Fill="#F97316" Opacity="0.8"/>

                <Ellipse Stroke="White" StrokeThickness="5" Opacity="0.2"/>
                <Ellipse Width="30" Height="30" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>





                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="22.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Voucher 10%" Style="{StaticResource SliceTextStyle}"/>
                </Border>

                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="67.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Chúc bạn may mắn lần sau" Style="{StaticResource SliceTextStyle}"/>
                </Border>

                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="112.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Free Pepsi" Style="{StaticResource SliceTextStyle}"/>
                </Border>

                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="157.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Voucher 20k" Style="{StaticResource SliceTextStyle}"/>
                </Border>

                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="202.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Chúc bạn may mắn lần sau " Style="{StaticResource SliceTextStyle}"/>
                </Border>

                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="247.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Voucher 5%" Style="{StaticResource SliceTextStyle}"/>
                </Border>

                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="292.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Free Kimchi" Style="{StaticResource SliceTextStyle}"/>
                </Border>

                <Border Height="200" VerticalAlignment="Top" RenderTransformOrigin="0.5, 1">
                    <Border.RenderTransform>
                        <RotateTransform Angle="337.5"/>
                    </Border.RenderTransform>
                    <TextBlock Text="Voucher 50k" Style="{StaticResource SliceTextStyle}"/>
                </Border>




            </Grid>

            <Path Data="M0,0 L20,0 L10,20 Z" Fill="White" Width="30" Height="30" Stretch="Fill"
                  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,85,0,0">
                <Path.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                </Path.Effect>
            </Path>

            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,497,0,0">
                <TextBlock x:Name="txtDiem" Text="Điểm của bạn: 1500" Foreground="#F59E0B" 
                           FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <Button x:Name="btnSpin" Click="BtnSpin_Click" Content="QUAY NGAY (500 điểm)"
                        Style="{StaticResource GlassButtonStyle}" Width="220" Height="50"
                        Background="{DynamicResource AccentGradient}" FontWeight="Bold" FontSize="16">
                    <Button.Effect>
                        <DropShadowEffect Color="#36D1DC" BlurRadius="15" ShadowDepth="0"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>