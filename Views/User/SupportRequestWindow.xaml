<Window x:Class="GymManagement.Views.User.SupportRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Yêu Cầu Hỗ Trợ" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource GlassBackground}" CornerRadius="20" BorderBrush="{StaticResource AccentGradient}" BorderThickness="2">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="BẠN CẦN PHỤC VỤ?" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">

                <!-- Hỗ trợ / Phục vụ (Mặc định cho cả bàn trống/có đơn) -->
                <Button x:Name="BtnSupport" Content="🔔 GỌI PHỤC VỤ (HỖ TRỢ)" 
                        Click="BtnSupport_Click" 
                        Style="{StaticResource GlassButtonStyle}" 
                        Background="#203B82F6" 
                        Height="55" Margin="0,0,0,15" FontSize="15" FontWeight="Bold"/>

                <!-- Thanh toán (Chỉ hiện khi có đơn đang hoạt động) -->
                <Button x:Name="BtnCheckout" Content="💵 YÊU CẦU THANH TOÁN" 
                        Click="BtnCheckout_Click" 
                        Style="{StaticResource GlassButtonStyle}" 
                        Background="{StaticResource WarningYellow}" 
                        Height="55" FontSize="15" FontWeight="Bold"/>

            </StackPanel>

            <Button Grid.Row="2" Content="Hủy" Click="BtnCancel_Click" 
                    Style="{StaticResource NavButtonStyle}" 
                    Background="Transparent" Foreground="{StaticResource TextSecondary}" Height="30" Padding="0" Margin="0,15,0,0"/>
        </Grid>
    </Border>
</Window>