<Window x:Class="OrMan.Views.User.ChiTietMonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chi Tiết Món" Height="555" Width="440"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="ChipStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="#15FFFFFF"/>
                <Setter Property="Foreground" Value="#CCCCCC"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="8" Padding="0,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bdr" Property="Background" Value="#25FFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="bdr" Property="Background" Value="{StaticResource AccentGradient}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter TargetName="bdr" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#8B5CF6" BlurRadius="8" ShadowDepth="0" Opacity="0.4"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TransparentButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,3"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#A78BFA"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="25" Background="{StaticResource MainBackgroundGradient}" ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,5,0,0">
                <Image Source="{Binding HinhAnhUrl}" Stretch="Uniform" VerticalAlignment="Center"/>
                <Button Click="BtnClose_Click" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15"
                        Width="30" Height="30" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bdr" Background="#80000000" CornerRadius="15" BorderBrush="#30FFFFFF" BorderThickness="1">
                                <Path Data="{StaticResource IconClose}" Fill="White" Stretch="Uniform" Width="8" Height="8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bdr" Property="Background" Value="#CCFF4444"/>
                                    <Setter TargetName="bdr" Property="BorderThickness" Value="0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <Grid Grid.Row="1" Margin="25,0,25,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding TenMon}" FontSize="20" FontWeight="Bold" Foreground="White" TextWrapping="Wrap" LineHeight="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <TextBlock Text="{Binding GiaBan, StringFormat='{}{0:N0}'}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource WarningYellow}" HorizontalAlignment="Right"/>
                        <TextBlock Text="VND" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right" Margin="0,-2,0,0"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Height="1" Background="White" Opacity="0.1" Margin="0,5,0,8"/>

                <StackPanel Grid.Row="2" x:Name="PnlCapDoCay" Margin="0,0,0,8">
                    <TextBlock Text="Cấp độ cay" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,8"/>
                    <ItemsControl x:Name="LevelItemsControl" Margin="-4,0,-4,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="LevelCay" Content="{Binding}" Style="{StaticResource ChipStyle}" Checked="RadioButton_Checked"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <Grid Grid.Row="3" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Số lượng" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>

                    <Border Grid.Column="2" Background="#10FFFFFF" BorderBrush="#20FFFFFF" BorderThickness="1" CornerRadius="10" Height="36" Width="110">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="32"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="-" Click="BtnGiam_Click" Style="{StaticResource TransparentButtonStyle}"/>
                            <TextBox Grid.Column="1" x:Name="txtSoLuong" Text="1" 
                                     Style="{x:Null}" Background="Transparent" Foreground="White" BorderThickness="0" CaretBrush="White"
                                     FontSize="15" FontWeight="Bold"
                                     Margin="0,6"
                                     HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                     MaxLength="3" PreviewTextInput="TxtSoLuong_PreviewTextInput"
                                     TextChanged="TxtSoLuong_TextChanged" LostFocus="TxtSoLuong_LostFocus"/>
                            <Button Grid.Column="2" Content="+" Click="BtnTang_Click" Style="{StaticResource TransparentButtonStyle}"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="4" Margin="0,0,0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Ghi chú món" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,5"/>

                    <Border Grid.Row="1" Background="#10FFFFFF" CornerRadius="12" BorderThickness="1" BorderBrush="#20FFFFFF" Height="70">
                        <TextBox x:Name="txtNote" 
                                 Style="{x:Null}" Background="Transparent" Foreground="White" CaretBrush="White" BorderThickness="0"
                                 FontSize="13" 
                                 Margin="7,7" 
                                 Padding="0"
                                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 VerticalContentAlignment="Top"
                                 ToolTip="Ví dụ: Không hành, nhiều nước..."/>   
                    </Border>
                </Grid>
            </Grid>

            <Border Grid.Row="2" Padding="25,10,25,25" VerticalAlignment="Bottom">
                <Button x:Name="btnConfirm" Click="BtnConfirm_Click" 
                        Style="{StaticResource GlassButtonStyle}" Background="{StaticResource AccentGradient}" 
                        Height="50" Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect Color="#8B5CF6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                    </Button.Effect>
                    <Grid Width="360">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Path Data="M11,9H13V6H16V4H13V1H11V4H8V6H11M7,18A2,2 0 0,0 9,20A2,2 0 0,0 11,18A2,2 0 0,0 9,16A2,2 0 0,0 7,18M17,18A2,2 0 0,0 19,20A2,2 0 0,0 21,18A2,2 0 0,0 19,16A2,2 0 0,0 17,18M7.17,14.75L7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.59 17.3,11.97L21.16,4.96L19.42,4H19.41L18.31,6L15.55,11H8.53L8.4,10.73L6.16,6L5.21,4L4.27,2H1V4H3L4.24,6.65L2.92,9.03C2.37,10 2.89,11.21 4,11.77C4.19,11.87 4.41,11.94 4.63,11.97L4.7,12H18V14H7C6.45,14 6,14.45 6,15A1,1 0 0,0 7,16H18V18H7A3,3 0 0,1 4,15C4,14.64 4.08,14.29 4.22,13.97L2.62,11.07L2.61,11.05C2.3,10.5 2.3,9.81 2.64,9.25L4.19,6.43L4.62,7.21L4.62,7.22L7.17,14.75Z" 
                                  Fill="White" Width="18" Height="18" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Thêm vào giỏ" FontSize="15" FontWeight="Bold" Foreground="White"/>
                        </StackPanel>
                        <TextBlock Text="35,000 đ" FontSize="15" FontWeight="Bold" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>