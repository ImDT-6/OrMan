<Window x:Class="GymManagement.Views.User.ChiTietMonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chi Tiết Món" Height="620" Width="550"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource MainBackgroundGradient}" CornerRadius="25" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <!-- Ảnh món (Tăng nhẹ để đẹp hơn) -->
                <RowDefinition Height="*"/>
                <!-- Phần nội dung chính (Co giãn) -->
                <RowDefinition Height="Auto"/>
                <!-- Nút đặt (Cố định) -->
            </Grid.RowDefinitions>

            <!-- 1. Ảnh Header -->
            <Grid Grid.Row="0">
                <Border CornerRadius="25,25,0,0">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding HinhAnhUrl}" Stretch="UniformToFill" Opacity="0.9"/>
                    </Border.Background>
                </Border>
                <!-- Lớp phủ gradient để text dễ đọc hơn -->
                <Border CornerRadius="25,25,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#00000000" Offset="0.5"/>
                            <GradientStop Color="#CC000000" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Nút Đóng -->
                <Button Click="BtnClose_Click" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15"
                        Width="36" Height="36"
                        Background="#60000000"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="18">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bdr" Property="Background" Value="{StaticResource AccentGradient}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="bdr" Property="Opacity" Value="0.8"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" CenterX="18" CenterY="18"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <Path Data="{StaticResource IconClose}" Fill="White" Stretch="Uniform" Width="12" Height="12"/>
                </Button>

                <!-- Tên và Giá -->
                <StackPanel VerticalAlignment="Bottom" Margin="25,0,25,20">
                    <TextBlock Text="{Binding TenMon}" FontSize="28" FontWeight="Bold" Foreground="White" TextWrapping="Wrap">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="{Binding GiaBan, StringFormat='{}{0:N0} đ'}" FontSize="24" Foreground="{StaticResource WarningYellow}" FontWeight="Bold" Margin="0,5,0,0">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Grid>

            <!-- 2. Tùy Chọn (Sử dụng DockPanel để phân chia không gian hiệu quả) -->
            <DockPanel Grid.Row="1" Margin="25,15,25,10" LastChildFill="True">

                <!-- [TOP] CHỌN CẤP ĐỘ CAY (Dock Top) -->
                <!-- Chỉ hiển thị nếu là Mì Cay (đã xử lý logic Visibility trong Code-behind) -->
                <StackPanel x:Name="PnlCapDoCay" DockPanel.Dock="Top" Margin="0,0,0,15">
                    <TextBlock Text="CHỌN CẤP ĐỘ CAY" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,10"/>
                    <ItemsControl x:Name="LevelItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton GroupName="LevelCay" Content="{Binding}" 
                                             Style="{StaticResource FilterRadioButtonStyle}" 
                                             Margin="0,0,8,8" MinWidth="60" Height="32" FontSize="13"
                                             Checked="RadioButton_Checked" Foreground="White"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Border Height="1" Background="{StaticResource GlassBorder}" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- [BOTTOM] SỐ LƯỢNG (Dock Bottom - Luôn nằm dưới cùng của phần nội dung) -->
                <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,15,0,5">
                    <TextBlock Text="SỐ LƯỢNG" Foreground="{StaticResource TextSecondary}" FontSize="12" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,8" Opacity="0.8"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="-" Click="BtnGiam_Click" Style="{StaticResource GlassButtonStyle}" Width="45" Height="40" Background="#30FFFFFF" FontSize="18" FontWeight="Bold"/>
                        <Border Background="#15FFFFFF" CornerRadius="10" Margin="10,0" MinWidth="60" Height="40">
                            <TextBlock x:Name="txtSoLuong" Text="1" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Button Content="+" Click="BtnTang_Click" Style="{StaticResource GlassButtonStyle}" Width="45" Height="40" Background="#30FFFFFF" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>

                <!-- [CENTER] GHI CHÚ (Fill phần còn lại) -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="GHI CHÚ CHO BẾP" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,8"/>

                    <!-- Khung nhập liệu tự co giãn -->
                    <Border Grid.Row="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" CornerRadius="15">
                        <TextBox x:Name="txtNote" 
                                 Style="{x:Null}" 
                                 Background="Transparent" 
                                 Foreground="White" 
                                 CaretBrush="White"
                                 BorderThickness="0"
                                 FontSize="14"
                                 Padding="12"
                                 Margin="10,10,10,10"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 VerticalContentAlignment="Top" 
                                 ToolTip="Ví dụ: Không hành, ít nước..."/>
                    </Border>
                </Grid>
            </DockPanel>

            <!-- 3. Nút Xác Nhận (Cố định ở đáy) -->
            <Border Grid.Row="2" Padding="25,10,25,25" Background="#00000000">
                <Button x:Name="btnConfirm" Content="Thêm vào giỏ - 35,000 đ" Click="BtnConfirm_Click" Style="{StaticResource GlassButtonStyle}" Background="{StaticResource AccentGradient}" Height="50" FontSize="16" FontWeight="Bold">
                    <Button.Effect>
                        <DropShadowEffect Color="#8B5CF6" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>