<UserControl x:Class="OrMan.Views.User.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OrMan.ViewModels.User"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200"
             FontFamily="Segoe UI" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- Style cho Tab Menu -->
            <Style x:Key="CategoryTabStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="60"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid Background="Transparent">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style cho các nút phụ trong Sidebar (Tích điểm, Đánh giá) -->
            <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="20,0,0,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10" Margin="10,2">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#15FFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource MainBackgroundGradient}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header gọn lại -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- SIDEBAR (Cột trái) -->
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Logo & Info -->
                    <RowDefinition Height="Auto"/>
                    <!-- Danh mục -->
                    <RowDefinition Height="Auto"/>
                    <!-- Các nút chức năng thêm (Tích điểm, Đánh giá) -->
                    <RowDefinition Height="*"/>
                    <!-- Khoảng trống -->
                    <RowDefinition Height="Auto"/>
                    <!-- Ngôn ngữ -->
                </Grid.RowDefinitions>

                <!-- 1. Logo & Địa chỉ -->
                <StackPanel Grid.Row="0" Margin="0,25" HorizontalAlignment="Center">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="45" Height="45" CornerRadius="12" Background="{DynamicResource AccentGradient}" Margin="0,0,15,0">
                            <Path Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2ZM12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20Z" 
                                  Fill="White" Stretch="Uniform" Width="24" Height="24"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{DynamicResource Str_Logo_Title}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{DynamicResource Str_Logo_Subtitle}" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Opacity="0.8" HorizontalAlignment="Center">
                        <TextBlock Text="📍" Foreground="#F87171" FontSize="12" Margin="0,0,5,0"/>
                        <TextBlock Text="{DynamicResource Str_Address}" Foreground="{StaticResource TextSecondary}" FontSize="11" 
                                   TextWrapping="Wrap" TextAlignment="Center" MaxWidth="190"/>
                    </StackPanel>
                </StackPanel>

                <!-- 2. Menu -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="{DynamicResource Str_Category_Title}" Foreground="{StaticResource TextSecondary}" FontSize="12" FontWeight="Bold" Margin="20,10,0,10" Opacity="0.7"/>
                    <Grid>
                        <Border x:Name="MenuIndicator" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="60" CornerRadius="0,10,10,0" Margin="0,0,10,0">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Color, Source={StaticResource FocusBorderBrush}}" Opacity="0.15"/>
                            </Border.Background>

                            <Border HorizontalAlignment="Left" Width="4" Background="{DynamicResource FocusBorderBrush}" CornerRadius="0,2,2,0" Margin="0,10"/>

                            <Border.RenderTransform>
                                <TranslateTransform x:Name="MenuIndicatorTransform" Y="0"/>
                            </Border.RenderTransform>
                        </Border>
                        <StackPanel x:Name="MenuPanel">
                            <RadioButton Content="{DynamicResource Str_Menu_Noodles}" Style="{StaticResource CategoryTabStyle}" IsChecked="True" Click="Filter_Click" Tag="Mì Cay"/>
                            <RadioButton Content="{DynamicResource Str_Menu_Snacks}" Style="{StaticResource CategoryTabStyle}" Click="Filter_Click" Tag="Đồ Chiên"/>
                            <RadioButton Content="{DynamicResource Str_Menu_Drinks}" Style="{StaticResource CategoryTabStyle}" Click="Filter_Click" Tag="Nước Uống"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- 3. Chức năng thêm (Dưới các mục menu) -->
                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <Rectangle Height="1" Fill="{StaticResource GlassBorder}" Margin="20,5,20,10" Opacity="0.5"/>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnTichDiem_Click" ToolTip="{DynamicResource Str_Points}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Str_Points}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnDanhGia_Click" ToolTip="{DynamicResource Str_Review}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Str_Review}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnLuckyWheel_Click" ToolTip="Quay thưởng may mắn">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconWheelGeo}" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                  Stretch="Uniform" Width="18" Height="18" Margin="0,0,10,0"/>

                            <TextBlock Text="Vòng quay" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
                <!-- 4. Ngôn ngữ (Góc dưới bên trái) -->
                <Button Grid.Row="4" Style="{StaticResource SidebarButtonStyle}" Click="BtnLanguage_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="txtLangFlag" Text="🇻🇳" Margin="0,0,10,0"/>
                        <TextBlock x:Name="txtLangName" Text="Tiếng Việt" FontSize="13"/>
                        <TextBlock Text="▼" Foreground="#AAA" FontSize="8" Margin="5,2,0,0"/>
                    </StackPanel>
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="🇻🇳 Tiếng Việt" Click="MenuItem_VN_Click"/>
                            <MenuItem Header="🇺🇸 English" Click="MenuItem_EN_Click"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
            </Grid>
        </Border>

        <!-- HEADER AREA (Cột phải, Hàng trên) -->
        <Border Grid.Row="0" Grid.Column="1" Height="120" Margin="20,20,20,10" CornerRadius="20" ClipToBounds="True">
            <Grid>
                <Grid x:Name="GridMorning" Visibility="Collapsed">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#4FC3F7" Offset="0"/>
                            <GradientStop Color="#B3E5FC" Offset="0.4"/>
                            <GradientStop Color="#C8E6C9" Offset="0.7"/>
                            <GradientStop Color="LightGreen" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Canvas>
                        <Ellipse Fill="#80FFFFFF" Width="120" Height="70" Canvas.Left="-30" Canvas.Top="25" Opacity="0.6"/>
                        <Ellipse Fill="#80FFFFFF" Width="150" Height="80" Canvas.Left="60" Canvas.Top="15" Opacity="0.4"/>
                        <Ellipse Fill="#80FFFFFF" Width="130" Height="70" Canvas.Right="-20" Canvas.Top="30" Opacity="0.5"/>
                    </Canvas>

                    <Ellipse Width="65" Height="65" Fill="#FFF9C4" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,25,70,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FFF176" BlurRadius="35" ShadowDepth="0" Opacity="0.9"/>
                        </Ellipse.Effect>
                    </Ellipse>

                    <Canvas>
                        <Ellipse Fill="#B0FFFFFF" Width="90" Height="55" Canvas.Left="30" Canvas.Top="55"/>
                        <Ellipse Fill="#B0FFFFFF" Width="110" Height="65" Canvas.Left="100" Canvas.Top="50"/>
                        <Ellipse Fill="#B0FFFFFF" Width="100" Height="60" Canvas.Right="40" Canvas.Top="60"/>
                    </Canvas>

                    <Grid VerticalAlignment="Bottom" Height="60">
                        <Path Data="M0,35 Q200,10 400,35 T800,35 V60 H0 Z" Fill="#81C784" Stretch="Fill"/>
                        <Path Data="M0,45 Q300,20 600,45 T1200,45 V60 H0 Z" Fill="#9CCC65" Stretch="Fill" Margin="0,5,0,0"/>
                    </Grid>

                    <Grid VerticalAlignment="Bottom" Margin="0,0,0,5">
                        <Canvas Margin="30,0,0,0" HorizontalAlignment="Left" Width="50" Height="70">
                            <Rectangle Fill="#795548" Width="6" Height="30" Canvas.Left="22" Canvas.Top="40"/>
                            <Ellipse Fill="#66BB6A" Width="50" Height="50" Canvas.Top="0"/>
                        </Canvas>
                        <Canvas Margin="85,0,0,5" HorizontalAlignment="Left" Width="35" Height="55">
                            <Rectangle Fill="#795548" Width="5" Height="25" Canvas.Left="15" Canvas.Top="30"/>
                            <Ellipse Fill="#4CAF50" Width="35" Height="40" Canvas.Top="0"/>
                        </Canvas>

                        <Canvas Margin="0,0,60,0" HorizontalAlignment="Right" Width="50" Height="70">
                            <Rectangle Fill="#795548" Width="6" Height="30" Canvas.Left="22" Canvas.Top="40"/>
                            <Ellipse Fill="#66BB6A" Width="50" Height="50" Canvas.Top="0"/>
                        </Canvas>
                        <Canvas Margin="0,0,20,5" HorizontalAlignment="Right" Width="40" Height="60">
                            <Rectangle Fill="#795548" Width="5" Height="25" Canvas.Left="17.5" Canvas.Top="35"/>
                            <Ellipse Fill="#81C784" Width="40" Height="45" Canvas.Top="0"/>
                        </Canvas>
                        <Canvas Margin="0,0,120,10" HorizontalAlignment="Right" Width="30" Height="45">
                            <Rectangle Fill="#795548" Width="4" Height="20" Canvas.Left="13" Canvas.Top="25"/>
                            <Ellipse Fill="#4CAF50" Width="30" Height="35" Canvas.Top="0"/>
                        </Canvas>
                    </Grid>
                </Grid>

                <Grid x:Name="GridNoon" Visibility="Visible">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#0277BD" Offset="0"/>
                            <GradientStop Color="#29B6F6" Offset="0.3"/>
                            <GradientStop Color="#81D4FA" Offset="0.55"/>
                            <GradientStop Color="#FFF9C4" Offset="0.8"/>
                            <GradientStop Color="#FFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid.RenderTransform>
                            <TranslateTransform Y="-80"/>
                        </Grid.RenderTransform>

                        <Ellipse Width="1000" Height="1000" Opacity="0.4" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#60FFFFFF" Offset="0"/>
                                    <GradientStop Color="#30FFF176" Offset="0.3"/>
                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Grid x:Name="SunRaysContainer">
                            <Grid.Resources>
                                <Style TargetType="Rectangle" x:Key="SoftRayStyle">
                                    <Setter Property="Width" Value="60"/>
                                    <Setter Property="Height" Value="800"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Top"/>
                                    <Setter Property="RenderTransformOrigin" Value="0.5,1"/>
                                    <Setter Property="Margin" Value="0,-800,0,0"/>
                                    <Setter Property="Fill">
                                        <Setter.Value>
                                            <RadialGradientBrush Center="0.5,1" GradientOrigin="0.5,1" RadiusX="0.5" RadiusY="2">
                                                <GradientStop Color="#A0FFFFE0" Offset="0"/>
                                                <GradientStop Color="#40FFF59D" Offset="0.3"/>
                                                <GradientStop Color="Transparent" Offset="0.7"/>
                                            </RadialGradientBrush>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <BlurEffect Radius="20" RenderingBias="Performance"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Grid.Resources>

                            <Rectangle Style="{StaticResource SoftRayStyle}"/>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="30"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="60"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="90"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="120"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="150"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="180"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="210"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="240"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="270"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="300"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="330"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>

                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="15"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="45"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="75"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="105"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="135"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="165"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="195"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="225"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="255"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="285"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="315"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                            <Rectangle Style="{StaticResource SoftRayStyle}" Opacity="0.5" Width="40">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="345"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>

                        <Ellipse Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="#FFFFFF"/>
                            </Ellipse.Fill>
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#FFFFF176" BlurRadius="80" ShadowDepth="0" Opacity="1"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <Ellipse Width="110" Height="110" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse.Fill>
                                <RadialGradientBrush GradientOrigin="0.5,0.5" Center="0.5,0.5">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#FFFFEB3B" Offset="0.5"/>
                                    <GradientStop Color="#FFFBC02D" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>

                    <Grid VerticalAlignment="Bottom" Height="40">
                        <Path Data="M0,40 C300,10 600,60 900,20 V40 H0 Z" Fill="#80DEEA" Stretch="Fill"/>
                        <Path Data="M0,40 C300,10 600,60 900,20 V40 H0 Z" Fill="#40B2DFDB" Stretch="Fill" Margin="-50,5,0,0"/>
                    </Grid>

                    <Grid VerticalAlignment="Bottom" Margin="0,0,40,5" HorizontalAlignment="Right" Opacity="0.9">
                        <Ellipse Width="25" Height="8" Fill="#004D40" Margin="0,23,0,0" Opacity="0.6"/>
                        <Path Data="M5,30 L10,0 L15,30 Z" Fill="#00695C" Height="25" Width="8" Stretch="Fill"/>
                        <Ellipse Width="30" Height="30" Fill="#009688" Margin="-10,0,0,18"/>
                    </Grid>
                </Grid>

                <Grid x:Name="GridAfternoon" Visibility="Collapsed">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FF7043" Offset="0"/>
                            <GradientStop Color="#4A148C" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="80,0,0,-30">
                        <Ellipse Width="260" Height="260" Fill="#20FFEB3B"/>
                        <Ellipse Width="180" Height="180" Fill="#40FFC107"/>
                        <Ellipse Width="100" Height="100">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="#FFEE58" Offset="0"/>
                                    <GradientStop Color="#FF9800" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                    <Grid VerticalAlignment="Bottom" Height="60">
                        <Path Data="M0,30 C200,50 400,10 600,30 S900,50 1200,20 V60 H0 Z" Fill="#311B92" Opacity="0.7" Stretch="Fill"/>
                        <Path Data="M0,40 C150,20 300,50 450,30 S700,0 900,30 S1200,10 1500,40 V60 H0 Z" Fill="#1A237E" Stretch="Fill" Margin="0,10,0,0"/>
                    </Grid>
                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,0">
                        <Path Data="M10,80 L30,10 L50,80 Z" Fill="#1A237E" Margin="0,0,0,-10" Height="60" Stretch="Fill" Width="30"/>
                        <Path Data="M40,60 L55,20 L70,60 Z" Fill="#1A237E" Margin="30,0,0,0" Height="40" Stretch="Fill" Width="20"/>
                    </Grid>
                </Grid>

                <Grid x:Name="GridNight" Visibility="Visible">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#1A103C" Offset="0"/>
                            <GradientStop Color="#4A3088" Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Canvas>
                        <Ellipse Width="3" Height="3" Fill="White" Opacity="0.8" Canvas.Left="50" Canvas.Top="30"/>
                        <Ellipse Width="4" Height="4" Fill="White" Opacity="0.9" Canvas.Left="400" Canvas.Top="15"/>
                        <Path Data="M10,0 L12,7 L19,7 L13,11 L15,18 L10,14 L5,18 L7,11 L1,7 L8,7 Z" Fill="#FFFFE0" Canvas.Right="80" Canvas.Top="50" Width="8" Height="8" Opacity="0.7"/>
                    </Canvas>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="250,-40,0,10" Width="130" Height="130">
                        <Ellipse Width="110" Height="110" Fill="#40FFFFFF" Margin="95,12,-75,8">
                            <Ellipse.Effect>
                                <BlurEffect Radius="35"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <Path Data="M20,10 A40,40 0 1,1 10,70 A30,30 0 1,0 20,10 Z" Fill="#FFFDD0" Stretch="Uniform" Width="45" Height="45" Margin="128,45,-43,40">
                            <Path.Effect>
                                <DropShadowEffect Color="White" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                            </Path.Effect>
                        </Path>
                    </Grid>
                    <Grid VerticalAlignment="Bottom" Height="60">
                        <Path Data="M0,60 C150,40 300,70 450,50 S700,20 900,50 S1200,30 1500,60 V80 H0 Z" Fill="#3E2778" Stretch="Fill" Margin="0,10,0,-10"/>
                    </Grid>
                    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,0">
                        <Path Data="M20,100 Q40,0 60,100 Z" Fill="#24124d" Height="70" Stretch="Fill" Width="40" Margin="0,0,0,-10"/>
                        <Path Data="M0,80 Q15,20 30,80 Z" Fill="#24124d" Height="50" Stretch="Fill" Width="25" Margin="-20,0,0,-5"/>
                    </Grid>
                </Grid>

                <Grid VerticalAlignment="Top" Margin="30,25,40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="70" Height="70" CornerRadius="35" BorderBrush="White" BorderThickness="1" Background="#15FFFFFF" RenderTransformOrigin="1.114,0.909">
                            <Viewbox Opacity="0.8" RenderTransformOrigin="-0.106,0.531" HorizontalAlignment="Center" Width="32" Margin="0,18,0,0" Height="32" VerticalAlignment="Top">
                                <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" Fill="White" RenderTransformOrigin="-0.106,0.381" Stretch="Fill" Width="16" Height="17"/>
                            </Viewbox>
                        </Border>
                        <StackPanel VerticalAlignment="Center" Margin="20,0,0,0">
                            <TextBlock x:Name="txtGreeting" Text="Chào buổi tối" Foreground="White" FontSize="26" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.5"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="{Binding TenHienThi, FallbackValue=Hôm nay của bạn thế nào?}" Foreground="White" FontSize="16" FontWeight="SemiBold">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.5"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <Border Background="#40FFFFFF" CornerRadius="10" Margin="10,0,0,0" Padding="10,2">
                                    <TextBlock Text="Phục vụ" Foreground="#EEE" FontSize="11" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBox Style="{StaticResource SearchTextBoxStyle}" ToolTip="{DynamicResource Str_Search_Placeholder}" Width="220" Height="45" VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <Button Command="{Binding CallStaffCommand}" 
        IsEnabled="{Binding IsNutGoiHoTroEnabled}" 
        Style="{StaticResource GlassButtonStyle}" 
        Width="150" Height="45" Margin="0,0,10,0" 
        Background="#20F59E0B" ToolTip="Gọi phục vụ">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TextNutHoTro}" 
                   FontSize="14" VerticalAlignment="Center" 
                   FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ChonBanCommand}" Style="{StaticResource SocialButtonStyle}" Height="45" Width="90" Margin="0,0,10,0" Padding="15,0" Background="#20FFFFFF" ToolTip="{DynamicResource Str_Table}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{DynamicResource Str_Table}" Foreground="White" Margin="0,3,5,0"/>
                                <TextBlock Text="{Binding TableDisplayText}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text=" ▼" Foreground="White" Margin="1,2,5,0" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Content="{DynamicResource Str_Exit}" Tag="{StaticResource IconLogoutGeo}" Click="BtnDangXuat_Click" Style="{StaticResource NavButtonStyle}" Foreground="{StaticResource DangerRed}" Background="#10EF4444" Height="45" Padding="15,0" Margin="0"/>
                    </StackPanel>
                </Grid>
                <Border VerticalAlignment="Top" HorizontalAlignment="Center" 
        Background="#80000000" Margin="0,10,0,0" 
        Padding="10,5" CornerRadius="15">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Giờ giả lập: " Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ElementName=TestTimeSlider, Path=Value, StringFormat={}{0:00}h}" 
                   Foreground="#FFEB3B" FontWeight="Bold" Width="30" VerticalAlignment="Center"/>

                        <Slider x:Name="TestTimeSlider" Width="150" Minimum="0" Maximum="23" Value="8" 
                IsSnapToTickEnabled="True" TickFrequency="1" 
                VerticalAlignment="Center" Margin="10,0"
                ValueChanged="TestTimeSlider_ValueChanged"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- MENU SCROLLVIEWER -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="20,0,20,0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ItemsControlMenu" ItemsSource="{Binding MenuHienThi}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource NavButtonStyle}" Width="200" Height="240" Margin="0,0,15,15" Padding="0" Click="Product_Click" Tag="{Binding}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#25FFFFFF" CornerRadius="15" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" Cursor="Hand">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="140"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" CornerRadius="15,15,0,0" ClipToBounds="True">
                                                <Grid>
                                                    <Image Source="{Binding HinhAnhUrl}" Stretch="UniformToFill"/>
                                                    <Border Background="#CC000000" Visibility="{Binding IsSoldOut, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <Border BorderBrush="#EF4444" BorderThickness="2" CornerRadius="8" 
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                Padding="15,5" RenderTransformOrigin="0.5,0.5">
                                                            <Border.RenderTransform>
                                                                <RotateTransform Angle="-15"/>
                                                            </Border.RenderTransform>
                                                            <TextBlock Text="{DynamicResource Str_SoldOut}" Foreground="#EF4444" FontWeight="Bold" FontSize="18"/>
                                                        </Border>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <Grid Grid.Row="1">
                                                <TextBlock Text="{Binding TenMon}" Foreground="White" FontWeight="SemiBold" FontSize="15" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Top" Margin="12,12,12,0" MaxHeight="42"/>

                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12,0,0,12">
                                                    <TextBlock Text="{Binding GiaBan, StringFormat=N0}" Foreground="{StaticResource WarningYellow}" FontWeight="Bold" FontSize="16"/>
                                                    <TextBlock Text="đ" Foreground="{StaticResource WarningYellow}" FontSize="12" Margin="2,0,0,2" VerticalAlignment="Bottom"/>
                                                </StackPanel>

                                                <Border Width="32" Height="32" CornerRadius="10" 
        VerticalAlignment="Bottom" HorizontalAlignment="Right" 
        Margin="0,0,12,12" Cursor="Hand" 
        UseLayoutRounding="True" SnapsToDevicePixels="True"
        
        Background="{DynamicResource AccentGradient}">
                                                    <Viewbox Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Path Data="M 2,12 H 22 M 12,2 V 22" Stroke="White" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                                    </Viewbox>
                                                </Border>
                                            </Grid>
                                            <Border Grid.RowSpan="2" Background="#50000000" CornerRadius="15" Visibility="{Binding IsSoldOut, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="False"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- FOOTER CART -->
        <Border Grid.Row="2" Grid.Column="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{DynamicResource AccentGradient}" CornerRadius="25" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="🛒" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="0,0,0,2"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="14" Margin="0,0,0,3">
        <Run Text="{DynamicResource Str_Selected_Prefix}"/>
        
        <Run Text="{Binding TongSoLuong, Mode=OneWay}" FontWeight="Bold" Foreground="White"/>
        
        <Run Text="{DynamicResource Str_Selected_Suffix}"/>
                        </TextBlock>

                        <TextBlock VerticalAlignment="Bottom">
        <Run Text="{DynamicResource Str_Subtotal}" Foreground="#E2E8F0" FontSize="14" BaselineAlignment="Baseline"/>
        
        <Run Text="{Binding TongTienCart, StringFormat='{}{0:N0} VNĐ'}" Foreground="{StaticResource WarningYellow}" FontWeight="Bold" FontSize="22" BaselineAlignment="Baseline"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" Content="{DynamicResource Str_Btn_ViewCart}" Click="BtnThanhToan_Click" Style="{StaticResource GlassButtonStyle}" Width="250" Height="46" Background="{StaticResource SuccessGreen}" Foreground="White" FontSize="15" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>