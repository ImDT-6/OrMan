<UserControl x:Class="OrMan.Views.User.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OrMan.ViewModels.User"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="1200"
             FontFamily="Segoe UI" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- Style cho Tab Menu -->
            <Style x:Key="CategoryTabStyle" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="60"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Grid Background="Transparent">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style cho các nút phụ trong Sidebar (Tích điểm, Đánh giá) -->
            <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Padding" Value="20,0,0,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10" Margin="10,2">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#15FFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource MainBackgroundGradient}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header gọn lại -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- SIDEBAR (Cột trái) -->
        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Logo & Info -->
                    <RowDefinition Height="Auto"/>
                    <!-- Danh mục -->
                    <RowDefinition Height="Auto"/>
                    <!-- Các nút chức năng thêm (Tích điểm, Đánh giá) -->
                    <RowDefinition Height="*"/>
                    <!-- Khoảng trống -->
                    <RowDefinition Height="Auto"/>
                    <!-- Ngôn ngữ -->
                </Grid.RowDefinitions>

                <!-- 1. Logo & Địa chỉ -->
                <StackPanel Grid.Row="0" Margin="20,25">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="45" Height="45" CornerRadius="12" Background="{StaticResource AccentGradient}" Margin="0,0,15,0">
                            <Path Data="M12,2C6.48,2 2,6.48 2,12C2,17.52 6.48,22 12,22C17.52,22 22,17.52 22,12C22,6.48 17.52,2 12,2ZM12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20Z" 
                                  Fill="White" Stretch="Uniform" Width="24" Height="24"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="MÌ CAY" Foreground="White" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="OMEGA 3/2" Foreground="{StaticResource TextSecondary}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Địa chỉ quán -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Opacity="0.8">
                        <TextBlock Text="📍" Foreground="#F87171" FontSize="12" Margin="0,0,5,0"/>
                        <TextBlock Text="P5.02 Tòa B, UIT" Foreground="{StaticResource TextSecondary}" FontSize="11" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>

                <!-- 2. Menu -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="DANH MỤC" Foreground="{StaticResource TextSecondary}" FontSize="12" FontWeight="Bold" Margin="20,10,0,10" Opacity="0.7"/>
                    <Grid>
                        <Border x:Name="MenuIndicator" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="60" Background="#208B5CF6" CornerRadius="0,10,10,0" Margin="0,0,10,0">
                            <Border HorizontalAlignment="Left" Width="4" Background="#8B5CF6" CornerRadius="0,2,2,0" Margin="0,10"/>
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="MenuIndicatorTransform" Y="0"/>
                            </Border.RenderTransform>
                        </Border>
                        <StackPanel x:Name="MenuPanel">
                            <RadioButton Content="🔥 Mì Cay &amp; Lẩu" Style="{StaticResource CategoryTabStyle}" IsChecked="True" Click="Filter_Click" Tag="Mì Cay"/>
                            <RadioButton Content="🥟 Ăn Vặt" Style="{StaticResource CategoryTabStyle}" Click="Filter_Click" Tag="Đồ Chiên"/>
                            <RadioButton Content="🥤 Nước Uống" Style="{StaticResource CategoryTabStyle}" Click="Filter_Click" Tag="Nước Uống"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <!-- 3. Chức năng thêm (Dưới các mục menu) -->
                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <Rectangle Height="1" Fill="{StaticResource GlassBorder}" Margin="20,5,20,10" Opacity="0.5"/>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="BtnTichDiem_Click" ToolTip="Tích điểm Khách Hàng">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💎" Margin="0,0,10,0"/>
                            <TextBlock Text="Tích điểm" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}"  ToolTip="Gửi đánh giá">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⭐" Margin="0,0,10,0"/>
                            <TextBlock Text="Đánh giá" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- 4. Ngôn ngữ (Góc dưới bên trái) -->
                <Button Grid.Row="4" Style="{StaticResource SidebarButtonStyle}" VerticalAlignment="Bottom" Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🇻🇳" Margin="0,0,10,0"/>
                        <TextBlock Text="Tiếng Việt" FontSize="13"/>
                        <TextBlock Text="▼" Foreground="#AAA" FontSize="8" Margin="5,2,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- HEADER AREA (Cột phải, Hàng trên) -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Lời chào -->
                <ColumnDefinition Width="Auto"/>
                <!-- Search Box -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer -->
                <ColumnDefinition Width="Auto"/>
                <!-- Action Buttons -->
            </Grid.ColumnDefinitions>

            <!-- Lời chào (Real-time) -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,25,0">
                <TextBlock Text="👋" Foreground="White" FontSize="20" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtGreeting" Text="Chào ..., Quý khách" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Thanh tìm kiếm (Đã dời sang phải lời chào) -->
            <TextBox Grid.Column="1" Style="{StaticResource SearchTextBoxStyle}" ToolTip="Tìm món ăn..." Width="300" Height="45" VerticalAlignment="Center"/>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Command="{Binding CallStaffCommand}" Style="{StaticResource GlassButtonStyle}" Width="150" Height="45" Margin="0,0,10,0" Background="#20F59E0B" ToolTip="Gọi phục vụ">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔔 Gọi Phục Vụ" FontSize="14" VerticalAlignment="Center" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding ChonBanCommand}" 
                        Style="{StaticResource SocialButtonStyle}" 
                        Height="45" Width="90" Margin="0,0,10,0" Padding="15,0"
                        Background="#20FFFFFF" ToolTip="Bấm để chọn bàn">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Bàn:" Foreground="White" Margin="0,3,5,0"/>
                        <TextBlock Text="{Binding TableDisplayText}" Foreground="White" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text=" ▼" Foreground="White" Margin="1,2,5,0" FontSize="10" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Content="Thoát" Tag="{StaticResource IconLogoutGeo}" Click="BtnDangXuat_Click" Style="{StaticResource NavButtonStyle}" Foreground="{StaticResource DangerRed}" Background="#10EF4444" Height="40" Padding="15,0" Margin="0"/>
            </StackPanel>
        </Grid>

        <!-- MENU SCROLLVIEWER -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" Margin="20,0,20,0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ItemsControlMenu" ItemsSource="{Binding MenuHienThi}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource NavButtonStyle}" Width="200" Height="240" Margin="0,0,15,15" Padding="0" Click="Product_Click" Tag="{Binding}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#25FFFFFF" CornerRadius="15" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1" Cursor="Hand">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="140"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" CornerRadius="15,15,0,0" ClipToBounds="True">
                                                <Grid>
                                                    <Image Source="{Binding HinhAnhUrl}" Stretch="UniformToFill"/>
                                                    <Border Background="#CC000000" Visibility="{Binding IsSoldOut, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                        <Border BorderBrush="#EF4444" BorderThickness="2" CornerRadius="8" 
                                                                HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                                Padding="15,5" RenderTransformOrigin="0.5,0.5">
                                                            <Border.RenderTransform>
                                                                <RotateTransform Angle="-15"/>
                                                            </Border.RenderTransform>
                                                            <TextBlock Text="TẠM HẾT" Foreground="#EF4444" FontWeight="Bold" FontSize="18"/>
                                                        </Border>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <Grid Grid.Row="1">
                                                <TextBlock Text="{Binding TenMon}" Foreground="White" FontWeight="SemiBold" FontSize="15" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Top" Margin="12,12,12,0" MaxHeight="42"/>

                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="12,0,0,12">
                                                    <TextBlock Text="{Binding GiaBan, StringFormat=N0}" Foreground="{StaticResource WarningYellow}" FontWeight="Bold" FontSize="16"/>
                                                    <TextBlock Text="đ" Foreground="{StaticResource WarningYellow}" FontSize="12" Margin="2,0,0,2" VerticalAlignment="Bottom"/>
                                                </StackPanel>

                                                <Border Width="32" Height="32" CornerRadius="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,12,12" Cursor="Hand" UseLayoutRounding="True" SnapsToDevicePixels="True">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#6366F1" Offset="0.0"/>
                                                            <GradientStop Color="#8B5CF6" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <Viewbox Width="14" Height="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Path Data="M 2,12 H 22 M 12,2 V 22" Stroke="White" StrokeThickness="3" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>
                                                    </Viewbox>
                                                </Border>
                                            </Grid>
                                            <Border Grid.RowSpan="2" Background="#50000000" CornerRadius="15" Visibility="{Binding IsSoldOut, Converter={StaticResource BooleanToVisibilityConverter}}" IsHitTestVisible="False"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- FOOTER CART -->
        <Border Grid.Row="2" Grid.Column="1" Background="{StaticResource GlassBackground}" BorderBrush="{StaticResource GlassBorder}" BorderThickness="0,1,0,0" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="{StaticResource AccentGradient}" CornerRadius="25" Width="50" Height="50" Margin="0,0,15,0">
                        <TextBlock Text="🛒" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Margin="0,0,0,2"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding TongSoLuong, StringFormat='{}Đã chọn {0} món'}" Foreground="{StaticResource TextSecondary}" FontSize="14" Margin="0,0,0,3"/>
                        <TextBlock VerticalAlignment="Bottom">
                            <Run Text="Tạm tính: " Foreground="#E2E8F0" FontSize="14" BaselineAlignment="Baseline"/>
                            <Run Text="{Binding TongTienCart, StringFormat='{}{0:N0} VNĐ'}" Foreground="{StaticResource WarningYellow}" FontWeight="Bold" FontSize="22" BaselineAlignment="Baseline"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1" Content="XEM GIỎ HÀNG &amp; GỬI ĐƠN" Click="BtnThanhToan_Click" Style="{StaticResource GlassButtonStyle}" Width="250" Height="46" Background="{StaticResource SuccessGreen}" Foreground="White" FontSize="15" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>