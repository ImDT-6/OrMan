<Window x:Class="OrMan.Views.User.TichDiemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Str_Loyalty_Title}" 
        Height="450" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/InputStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource MainBackgroundGradient}" CornerRadius="20" BorderBrush="{StaticResource GlassBorder}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="{DynamicResource Str_Loyalty_Header}" FontSize="22" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="{DynamicResource Str_Loyalty_Subtitle}" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Click="BtnClose_Click" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Style="{StaticResource GlassDismissButtonStyle}" Width="35" Height="35" Background="Transparent">
                    <Path Data="{StaticResource IconClose}" Fill="White" Stretch="Uniform" Width="10"/>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20">

                <TextBlock Text="{DynamicResource Str_Phone_Label}" Foreground="{StaticResource TextSecondary}" FontWeight="SemiBold" Margin="5,0,0,15"/>

                <Border Background="{StaticResource GlassBackground}" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource GlassBorder}" Height="55" Margin="0,0,0,25">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="📞" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,2"/>

                        <TextBox x:Name="txtPhone" Grid.Column="1"
                                 FontSize="24" FontWeight="Bold" Foreground="White" Background="Transparent" BorderThickness="0" 
                                 VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="10,0,5,0"
                                 MaxLength="12" KeyDown="txtPhone_KeyDown" CaretBrush="White"/>
                    </Grid>
                </Border>

                <StackPanel x:Name="pnlNameInput" Visibility="Collapsed">
                    <TextBlock Text="{DynamicResource Str_Name_Register_Label}" Foreground="#F59E0B" FontWeight="Bold" Margin="5,0,0,25"/>

                    <TextBox x:Name="txtName" Style="{StaticResource GlassTextBox}" Tag="{StaticResource IconUser}" 
                             ToolTip="{DynamicResource Str_Enter_Name_Tooltip}" Margin="0,0,0,15"/>
                </StackPanel>

                <Border x:Name="pnlResult" Visibility="Collapsed" Background="#2010B981" CornerRadius="12" Padding="20" Margin="0,0,0,15" BorderBrush="#10B981" BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Width="60" Height="60" CornerRadius="30" Background="#10B981" Margin="0,0,15,0">
                            <TextBlock Text="👑" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="lblTenKhach" Text="Nguyễn Văn A" Foreground="White" FontSize="18" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <Border Background="#10B981" CornerRadius="5" Padding="8,2" Margin="0,0,10,0">
                                    <TextBlock x:Name="lblHang" Text="Vàng" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                </Border>

                                <TextBlock Text="{DynamicResource Str_Points_Label}" Foreground="#A0AEC0" VerticalAlignment="Center"/>
                                <TextBlock Text=": " Foreground="#A0AEC0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lblDiem" Text="1,250" Foreground="#F59E0B" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock x:Name="lblError" Visibility="Collapsed" Foreground="#EF4444" Margin="5,0,0,10" TextWrapping="Wrap"/>

            </StackPanel>

            <Button Grid.Row="2" x:Name="btnAction" Click="BtnAction_Click" 
                    Content="{DynamicResource Str_Btn_Check}" 
                    Style="{StaticResource GlassButtonStyle}" 
                    Background="{StaticResource AccentGradient}" 
                    FontSize="16" FontWeight="Bold" Height="50">
                <Button.Effect>
                    <DropShadowEffect Color="#8B5CF6" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                </Button.Effect>
            </Button>

        </Grid>
    </Border>
</Window>