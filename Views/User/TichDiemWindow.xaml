<Window x:Class="OrMan.Views.User.TichDiemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tích Điểm" Height="350" Width="500"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

    <Border Background="#1E1E2D" CornerRadius="20" BorderBrush="#8B5CF6" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Click="BtnClose_Click" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Content="✕" Foreground="White" Background="Transparent" BorderThickness="0" FontSize="18" Cursor="Hand"/>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="💎 TÍCH ĐIỂM Khách Hàng" FontSize="22" FontWeight="Bold" Foreground="#8B5CF6" HorizontalAlignment="Center"/>
                <TextBlock Text="Nhập số điện thoại để tích điểm &amp; nhận ưu đãi" Foreground="#A0A0A0" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Border Background="#2D2D3F" CornerRadius="10" Padding="5">
                    <TextBox x:Name="txtPhone" FontSize="24" FontWeight="Bold" Foreground="White" Background="Transparent" 
                             BorderThickness="0" HorizontalContentAlignment="Center" MaxLength="12"
                             VerticalContentAlignment="Center" Height="50" KeyDown="txtPhone_KeyDown"/>
                </Border>

                <Button x:Name="btnCheck" Click="BtnCheck_Click" Content="TRA CỨU / ĐĂNG KÝ" Margin="0,20,0,0" Height="50"
                        Background="#8B5CF6" Foreground="White" FontSize="16" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <StackPanel x:Name="pnlResult" Visibility="Collapsed" Margin="0,20,0,0" Background="#25FFFFFF" Orientation="Vertical">
                    <Border Background="#2034D399" CornerRadius="10" Padding="15">
                        <StackPanel>
                            <TextBlock x:Name="lblTenKhach" Text="Xin chào: Nguyễn Văn A" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Hạng: " Foreground="#A0A0A0"/>
                                <TextBlock x:Name="lblHang" Text="Vàng" Foreground="#FFD700" FontWeight="Bold"/>
                                <TextBlock Text=" | Điểm: " Foreground="#A0A0A0" Margin="10,0,0,0"/>
                                <TextBlock x:Name="lblDiem" Text="1,250" Foreground="#FFD700" FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>