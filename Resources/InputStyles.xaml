    <Style x:Key="GlassTextBox" TargetType="{x:Type TextBox}">
        <Setter Property="Validation.ErrorTemplate" Value="{StaticResource EmptyErrorTemplate}"/>
        <Setter Property="Background" Value="{StaticResource GlassBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="45,0,15,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <StackPanel>
                        <Grid Height="55">
                            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20"/>
                            <ContentPresenter x:Name="iconPresenter" Content="{TemplateBinding Tag}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15,0,0,0"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>

                            <TextBlock x:Name="FloatingLabel" Text="{TemplateBinding ToolTip}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="45,0,0,0" Padding="5,0" IsHitTestVisible="False" RenderTransformOrigin="0,0.5">
                                <TextBlock.Foreground>
                                    <SolidColorBrush Color="{Binding Color, Source={StaticResource FocusBorderBrush}}"/>
                                </TextBlock.Foreground>
                                <TextBlock.Background>
                                    <SolidColorBrush Color="#1E293B"/>
                                </TextBlock.Background>
                                <TextBlock.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="LabelScale" ScaleX="0.85" ScaleY="0.85"/>
                                        <TranslateTransform x:Name="LabelTranslate" X="0" Y="-27"/>
                                    </TransformGroup>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>

                        <TextBlock x:Name="ErrorText" Text="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource TemplatedParent}}" Foreground="{StaticResource DangerRed}" FontSize="12" FontStyle="Italic" Margin="15,2,0,0" Visibility="Collapsed"/>
                    </StackPanel>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource DangerRed}"/>
                            <Setter TargetName="ErrorText" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentGradient}"/>
                            <Setter TargetName="border" Property="BorderThickness" Value="1.5"/>
                            <Setter TargetName="iconPresenter" Property="Opacity" Value="1"/>
                            <Setter TargetName="ErrorText" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="FloatingLabel" Property="Foreground" Value="{DynamicResource FocusBorderBrush}"/>
                        </Trigger>

                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsKeyboardFocusWithin" Value="False"/>
                                <Condition Property="Text" Value=""/>
                            </MultiTrigger.Conditions>

                            <Setter TargetName="FloatingLabel" Property="Background" Value="Transparent"/>
                            <Setter TargetName="FloatingLabel" Property="Foreground" Value="#94A3B8"/>

                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="LabelTranslate" Storyboard.TargetProperty="Y" To="0" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="LabelTranslate" Storyboard.TargetProperty="X" To="5" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="LabelScale" Storyboard.TargetProperty="ScaleX" To="1" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="LabelScale" Storyboard.TargetProperty="ScaleY" To="1" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="LabelTranslate" Storyboard.TargetProperty="Y" To="-27" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="LabelTranslate" Storyboard.TargetProperty="X" To="-7" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="LabelScale" Storyboard.TargetProperty="ScaleX" To="0.85" Duration="0:0:0.2"/>
                                        <DoubleAnimation Storyboard.TargetName="LabelScale" Storyboard.TargetProperty="ScaleY" To="0.85" Duration="0:0:0.2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>

                        <Trigger Property="Tag" Value="{x:Null}">
                            <Setter TargetName="PART_ContentHost" Property="Margin" Value="15,0,15,0"/>
                            <Setter TargetName="FloatingLabel" Property="Margin" Value="15,0,0,0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

