<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- I. MÀU NỀN THEME CHÍNH (Admin/User) -->
    <LinearGradientBrush x:Key="MainBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0F172A" Offset="0.0"/>
        <GradientStop Color="#1E1B4B" Offset="0.5"/>
        <GradientStop Color="#312E81" Offset="1.0"/>
        <GradientStop Color="#4C1D95" Offset="0.8"/>
        <GradientStop Color="#7C3AED" Offset="1.2"/>
    </LinearGradientBrush>

    <!-- II. MÀU CHUNG (Dùng cho mọi View, kể cả Login) -->
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#3B82F6" Offset="0.0"/>
        <GradientStop Color="#8B5CF6" Offset="1.0"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="GlassBackground" Color="#1E293B" Opacity="0.6"/>
    <SolidColorBrush x:Key="GlassBorder" Color="#FFFFFF" Opacity="0.15"/>
    <SolidColorBrush x:Key="TextPrimary" Color="White"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#94A3B8"/>
    <SolidColorBrush x:Key="SuccessGreen" Color="#10B981"/>
    <SolidColorBrush x:Key="WarningYellow" Color="#F59E0B"/>
    <SolidColorBrush x:Key="DangerRed" Color="#EF4444"/>

</ResourceDictionary>