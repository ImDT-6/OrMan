<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="MainBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#020617" Offset="0.0"/>

        <GradientStop Color="#0B1E3B" Offset="0.5"/>

        <GradientStop Color="#103F75" Offset="1.0"/>

        <GradientStop Color="#005A9E" Offset="0.8"/>

        <GradientStop Color="#0078D4" Offset="1.2"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#36D1DC" Offset="0.0"/>
        <GradientStop Color="#2B86C5" Offset="0.5"/>
        <GradientStop Color="#104E8B" Offset="1.0"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="FocusBorderBrush" Color="#36D1DC"/>

</ResourceDictionary>